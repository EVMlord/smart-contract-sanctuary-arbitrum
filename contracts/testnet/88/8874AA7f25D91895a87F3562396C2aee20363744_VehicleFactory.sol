        movement_speed = ((uint256(keccak256(abi.encode(randomResult, 3))) % 100) * 70 + 3000) / 100; 
        max_capacity = ((uint256(keccak256(abi.encode(randomResult, 4))) % 100) * 70 + 3000) / 100; 
        max_durability = 300 - attack - movement_speed - max_capacity;
        } else {
        attack = ((uint256(keccak256(abi.encode(randomResult, 2))) % 100) * 70 + 3000) / 100; 
        movement_speed = ((uint256(keccak256(abi.encode(randomResult, 3))) % 100) * 70 + 3000) / 100; 
        max_durability = ((uint256(keccak256(abi.encode(randomResult, 4))) % 100) * 70 + 3000) / 100; 
        max_capacity = 300 - attack - movement_speed - max_durability;
