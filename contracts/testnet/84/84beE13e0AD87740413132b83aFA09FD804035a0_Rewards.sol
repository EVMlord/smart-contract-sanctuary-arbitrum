            id: _id,
            questId: _questId,
            tokenAmount: _tokenAmount,
            tokenAddress: _tokenAddress,
            tokenId: _tokenId,
            tokenType: _tokenType
        });
        rewardsById[rewardCounter] = newReward;
        rewardsByAddress[msg.sender][_questId] = newReward;
        rewardCounter++;
        rewards[msg.sender][_questId] = newReward;

        Claim memory newClaim = Claim({lastClaimTime: 0, remainingClaims: _maxClaims});
        claims[msg.sender][_questId] = newClaim;

