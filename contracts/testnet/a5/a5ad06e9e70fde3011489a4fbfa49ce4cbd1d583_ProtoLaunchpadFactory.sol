pragma solidity 0.8.4;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/proxy/Clones.sol";
import "../interfaces/IProtoLaunchpad.sol";

/**
 * @dev Contract module to deploy a pool automatically
 */
contract ProtoLaunchpadFactory is Ownable {
    using SafeMath for uint256;

    address public feeRecipient;
    uint256 public fee;
    address public immutable poolImplementation;

    /**
     * @dev Emitted when launhPool function is succesfully called and a pool is created
     */
    event PoolCreation(
        uint256 indexed timestamp,
        address indexed poolAddress,
        address indexed projectOwner,
        uint256 poolMaxCap,
        uint256 saleStartTime,
        uint256 saleEndTime,
        uint256 noOfTiers
    );

    constructor(address _feeRecipient, uint256 _fee, address _poolImplementation) {
        feeRecipient = _feeRecipient;
        fee = _fee;
        poolImplementation = _poolImplementation;
    }

    modifier feeChecker() {
        require(msg.value == fee, "Insufficient value for fee");
        _;
    }

    /**
     * @dev Create a pool.
     *
     * emits a {PoolCreation} event
     */
    function launchPool(
        string memory name,
        uint256 poolMaxCap,
        uint256[2] memory baseAllocation, // index 0 baseMinAllocation, index 1 baseMaxAllocation
        uint256 saleStartTime,
        uint256 saleEndTime,
        uint256 noOfTiers,
        address payable projectOwner,
        address tokenAddress
    ) public payable feeChecker returns (address pool) {
        pool = Clones.clone(poolImplementation);
        IProtoLaunchpad(pool).initialize(
            msg.sender,
            name,
            poolMaxCap,
            baseAllocation,
            saleStartTime,
            saleEndTime,
            noOfTiers,
            projectOwner,
            tokenAddress
        );

        emit PoolCreation(block.timestamp, pool, projectOwner, poolMaxCap, saleStartTime, saleEndTime, noOfTiers);
    }
}