import {INonfungiblePositionManager} from "./UniswapV3/INonfungiblePositionManager.sol";
import {PeripheryPayments} from "./PeripheryPayments.sol";

import {IReward} from "../../interfaces/IReward.sol";

contract LiquidityStakingRewards is IReward, PeripheryPayments, ERC721Holder, ReentrancyGuard, Ownable {

    using SafeMath for uint256;
    using SafeMath for uint128;

    struct StakeData {
        uint256 timestamp;
        uint256 earnedRewardsTokenAmount;
        uint128 liquidity;
    }

    address public immutable positionManagerAddress;

    address public immutable treasury;

    address public immutable rewardsToken;

    uint256 public lastDistributionRewardsTime;

    uint256 public distributionRewardsTotalAmount;

    uint256 public periodRewardsTokenAmount = 1000;  //周期奖励Token数额

    uint256 public periodDuration = 60;  // 60s
    //uint256 public periodDuration = 43200;  // 12H

    /// @dev poolTokenId => totalSupply => StakeData
    mapping(uint256 => uint256) public poolTotalSupply;

    /// @dev poolTokenId => weight
    mapping(uint256 => uint256) public poolWeight;

    /// @dev poolTokenId => startTime
    mapping(uint256 => uint256) public poolStartTime;

    /// @dev account => poolTokenId => StakeData
    mapping(address => mapping(uint256 => StakeData)) public accountStakeDataMapping;

    constructor(address treasury_,
        address rewardsToken_,
        address positionManagerAddress_,
        address WETH9_) PeripheryPayments(WETH9_) {
        treasury = treasury_;
        rewardsToken = rewardsToken_;
        positionManagerAddress = positionManagerAddress_;
        require(INonfungiblePositionManager(positionManagerAddress).WETH9() == WETH9_, 'LiquidityStakingRewards: wrapper native token not equal');
    }

    function getDistributableIntervalTime() public view override returns (uint256) {
        //距离上次下发奖励的间隔时间
        return block.timestamp - lastDistributionRewardsTime;
    }

    function getDistributablePeriodNum() public view override returns (uint256) {
        //周期数
        uint256 periodNum;
        if (block.timestamp - lastDistributionRewardsTime >= periodDuration) {
            //周期数 = 间隔时间 / 周期时长
            periodNum = getDistributableIntervalTime() / periodDuration;
        } else {
            periodNum = 0;
        }
        return periodNum;
    }

    function getDistributableRewardsAmount() public view override returns (uint256) {
        //周期数
        uint256 periodNum = getDistributablePeriodNum();
        //return periodRewardsTokenAmount.mul(IERC20Metadata(rewardsToken).decimals() ** 10).mul(periodNum);
        return periodRewardsTokenAmount.mul(1e18).mul(periodNum);
    }

    function addDistributionRewardsAmount() external override returns (bool) {
        require(_msgSender() == treasury, "LiquidityStakingRewards: caller must treasury");
        uint256 amount = getDistributableRewardsAmount();
        if (amount > 0) {
            lastDistributionRewardsTime = block.timestamp;
            distributionRewardsTotalAmount += amount;
            return true;
        }
        return false;
    }

    modifier isValid(uint256 poolTokenId, uint256 token0Amount, uint256 token1Amount) {
        // 双边token 数额必须大于0
        require(token0Amount > 0 && token1Amount > 0, "LiquidityStakingRewards: token amount must greater than 0");
        // 必须持有 poolTokenId
        require(IERC721Enumerable(positionManagerAddress).ownerOf(poolTokenId) == address(this), "LiquidityStakingRewards: not token owner");
        _;
    }

    function setPeriod(uint256 periodDuration_) external onlyOwner {
        periodDuration = periodDuration_;
    }

    function setPeriodRewardsTokenAmount(uint256 periodRewardsTokenAmount_) external onlyOwner {
        periodRewardsTokenAmount = periodRewardsTokenAmount_;
    }

    function getRewardRate() public view returns (uint256) {
        if (periodDuration > 0 && periodRewardsTokenAmount > 0 && rewardsToken != address(0)) {
            //return periodRewardsTokenAmount.mul(IERC20Metadata(rewardsToken).decimals() ** 10).div(periodDuration);
            return periodRewardsTokenAmount.mul(1e18).div(periodDuration);
        }
        return 0;
    }

    function setPoolWeight(uint256 poolTokenId, uint256 weight) external isValid(poolTokenId, 1, 1) onlyOwner {
        poolWeight[poolTokenId] = weight;
    }

    function withdrawPoolTokenId(uint256 poolTokenId) external onlyOwner {
        IERC721Enumerable(positionManagerAddress).safeTransferFrom(address(this), _msgSender(), poolTokenId);
    }

    function ownPoolTokenIds(uint256 startIndex, uint256 endIndex) external view returns (uint256[] memory poolTokenIds){
        uint256 balance = IERC721Enumerable(positionManagerAddress).balanceOf(address(this));
        if (balance > 0 && endIndex >= startIndex) {
            uint len = endIndex + 1 - startIndex;
            if (startIndex < balance) {
                uint arrayLen = len > balance ? balance : len;
                poolTokenIds = new uint256[](arrayLen);
                uint index = 0;
                for (uint _i = startIndex; _i < ((endIndex < balance) ? endIndex : balance);) {
                    poolTokenIds[index] = IERC721Enumerable(positionManagerAddress).tokenOfOwnerByIndex(address(this), _i);
                unchecked{++_i;
                    ++index;}
                }
            }
        }
        return poolTokenIds;
    }

    function increaseLiquidity(INonfungiblePositionManager.IncreaseLiquidityParams calldata params) external payable isValid(params.tokenId, params.amount0Desired, params.amount1Desired) {

        // 取流动池
        (,,address token0,address token1,,,,,,,,) = INonfungiblePositionManager(positionManagerAddress).positions(params.tokenId);

        // 接收资金
        receipt(token0, _msgSender(), address(this), params.amount0Desired);
        receipt(token1, _msgSender(), address(this), params.amount1Desired);

        // 授权
        approve(token0, positionManagerAddress, params.amount0Desired);
        approve(token1, positionManagerAddress, params.amount1Desired);

        // 添加流动池
        (uint128 newIncreaseLiquidity, ,) = INonfungiblePositionManager(positionManagerAddress).increaseLiquidity{value : msg.value}(
            INonfungiblePositionManager.IncreaseLiquidityParams({
                tokenId : params.tokenId,
                amount0Desired : params.amount0Desired,
                amount1Desired : params.amount1Desired,
                amount0Min : params.amount0Min,
                amount1Min : params.amount1Min,
                deadline : params.deadline
            })
        );

        // 更新已赚取的奖励
        updateEarnedRewardsTokenAmount(_msgSender(), params.tokenId);

        // 更新做市数据
        updateLiquidity(_msgSender(), params.tokenId, true, newIncreaseLiquidity);
    }

    function decreaseLiquidity(uint256 poolTokenId, uint256 amount0Min, uint256 amount1Min, uint128 liquidity) external payable isValid(poolTokenId, amount0Min, amount1Min) {

        StakeData storage accountStakeData = accountStakeDataMapping[_msgSender()][poolTokenId];

        require(accountStakeData.liquidity >= liquidity, "LiquidityStakingRewards: insufficient liquidity");

        // 减少做市
        (uint256 amount0, uint256 amount1) = INonfungiblePositionManager(positionManagerAddress).decreaseLiquidity(
            INonfungiblePositionManager.DecreaseLiquidityParams({
                tokenId : poolTokenId,
                liquidity : liquidity,
                amount0Min : amount0Min,
                amount1Min : amount1Min,
                deadline : (block.timestamp + 600)
            })
        );

        require(amount0 >= amount0Min && amount1 >= amount1Min, "LiquidityStakingRewards: amount0Min or amount1Min slippage");

        // 更新已赚取的奖励
        updateEarnedRewardsTokenAmount(_msgSender(), poolTokenId);

        // 更新做市数据
        updateLiquidity(_msgSender(), poolTokenId, false, liquidity);
    }

    function earned(address account, uint256 liquidityTokenId) public view returns (uint256) {
        StakeData storage accountStakeData = accountStakeDataMapping[account][liquidityTokenId];
        // 总抵押的流动池
        uint256 poolLiquidity = poolTotalSupply[liquidityTokenId];
        // 计算已做市的奖励
        if (accountStakeData.timestamp < block.timestamp
        && accountStakeData.liquidity > 0
            && poolLiquidity > accountStakeData.liquidity) {
            uint256 duration = block.timestamp - accountStakeData.timestamp;
            return accountStakeData.earnedRewardsTokenAmount + duration.mul(getRewardRate()).div(poolLiquidity).mul(accountStakeData.liquidity);
        } else {
            return accountStakeData.earnedRewardsTokenAmount;
        }
    }

    function updateEarnedRewardsTokenAmount(address account, uint256 liquidityTokenId) private nonReentrant {
        StakeData storage accountStakeData = accountStakeDataMapping[account][liquidityTokenId];
        // 总抵押的流动池
        uint256 poolLiquidity = poolTotalSupply[liquidityTokenId];
        // 计算已做市的奖励
        if (accountStakeData.timestamp < block.timestamp
        && accountStakeData.liquidity > 0
            && poolLiquidity > accountStakeData.liquidity) {
            uint256 duration = block.timestamp - accountStakeData.timestamp;
            accountStakeData.earnedRewardsTokenAmount = duration.mul(getRewardRate()).div(poolLiquidity).mul(accountStakeData.liquidity);
        }
    }

    function updateLiquidity(address account, uint256 liquidityTokenId, bool increaseOrDecrease, uint128 liquidity) private nonReentrant {
        if (liquidity > 0) {
            StakeData storage accountStakeData = accountStakeDataMapping[account][liquidityTokenId];
            // 更新用户做市数据
            if (increaseOrDecrease) {
                accountStakeData.liquidity = accountStakeData.liquidity + liquidity;
                poolTotalSupply[liquidityTokenId] = poolTotalSupply[liquidityTokenId].add(liquidity);
            } else {
                accountStakeData.liquidity = accountStakeData.liquidity - liquidity;
                poolTotalSupply[liquidityTokenId] = poolTotalSupply[liquidityTokenId].sub(liquidity);
            }
            accountStakeData.timestamp = block.timestamp;
        }
    }

}

