import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "../Owned.sol";
import "../libraries/TransferHelper.sol";

contract SYNTHManager is Owned {
    address public synthToken;
    address public wrappedSynthr;

    constructor(
        address _owner,
        address _wrappedSynthr,
        address _synthToken
    ) Owned(_owner) {
        wrappedSynthr = _wrappedSynthr;
        synthToken = _synthToken;
    }

    function transferSynth(address _to, uint256 _amount) external onlyWrappedSynthr {
        require(IERC20(synthToken).balanceOf(address(this)) >= _amount, "Insufficient SYNTH balance");
        if (IERC20(synthToken).allowance(address(this), wrappedSynthr) == 0) {
            IERC20(synthToken).approve(wrappedSynthr, type(uint256).max);
        }
        require(_to != address(0), "Can't transfer to zero address");
        TransferHelper.safeTransfer(synthToken, _to, _amount);
        emit TransferSYNTH(_to, _amount);
    }

    modifier onlyWrappedSynthr() {
        require(msg.sender == wrappedSynthr, "Only wrappedSynthr can call.");
        _;
    }

    event TransferSYNTH(address indexed _to, uint256 _amount);
}

