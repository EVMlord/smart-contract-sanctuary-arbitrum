    using Strings for uint256;

    bytes32 public BACKEND_ROLE;
    bytes32 public DEV_ROLE;
    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");
    bytes32 public constant CREATOR_ROLE = keccak256("CREATOR_ROLE");

    address private _factory;
    uint256 private _achievementCounter;

    function initialize(address devAccount_) external initializer {
        __AccessControl_init();
        __SoulBound1155_init("");

        _factory = msg.sender;
        BACKEND_ROLE = IAchievementFactory(_factory).BACKEND_ROLE();
        DEV_ROLE = IAchievementFactory(_factory).DEV_ROLE();
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(DEV_ROLE, devAccount_);
        _setRoleAdmin(MINTER_ROLE, DEV_ROLE);
        _setRoleAdmin(CREATOR_ROLE, DEV_ROLE);
    }

    function create() external {
        if (!hasRole(CREATOR_ROLE, msg.sender)) revert InvalidCreateCallerError(msg.sender);
        emit AchievementCreated(++_achievementCounter);
    }

    function mint(address recepient, uint256 id) external {
        if (
            !IAchievementFactory(_factory).hasRole(DEFAULT_ADMIN_ROLE, msg.sender) &&
            !IAchievementFactory(_factory).hasRole(BACKEND_ROLE, msg.sender) &&
            !hasRole(MINTER_ROLE, msg.sender)
        ) revert InvalidMintCallerError(msg.sender);

        if (id == 0 || id > _achievementCounter) revert InvalidAchievementIdError(id);

        _mint(recepient, id, 1, "");
        emit AchievementMinted(recepient, id);
    }

    function uri(uint256 id) public view override returns (string memory) {
        return string.concat(IAchievementFactory(_factory).baseURI(), id.toString());
    }

    function supportsInterface(
        bytes4 interfaceId
    ) public view override(ERC1155Upgradeable, AccessControlUpgradeable) returns (bool) {
        return super.supportsInterface(interfaceId);
    }
}

