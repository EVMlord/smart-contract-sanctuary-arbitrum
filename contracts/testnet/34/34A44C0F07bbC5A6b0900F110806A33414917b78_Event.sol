    uint256 public totalPurchases;
    uint256 public rewards;

    constructor(
        address _entity,
        EventDetails memory _eventDetails,
        Area memory _area,
        address _authority,
        address _daoToken
    ) Collectible(
            _entity, 
            CollectibleType.EVENT, 
            _area, _authority, 
            _eventDetails.dataURI,
            _eventDetails.name,
            _eventDetails.symbol,
            _daoToken
        ) {

        eventDetails = _eventDetails;
        rewards =  _calculateRewards(_eventDetails.price);       
    }

