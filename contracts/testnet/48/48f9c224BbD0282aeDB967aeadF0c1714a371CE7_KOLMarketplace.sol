/**
 * @title FeeDistributor Contract
 * @notice This contract is designed to distribute fees to an epoch campaign and to various recipients
 */
contract FeeDistributor is OwnableUpgradeable, TokenSupport, SignatureVerifier {

    using SafeERC20 for IERC20;

    /// @dev Represents a recipient with an address and bps (percentage in basis points) share
    struct Recipient {
        address payable account;
        uint88 bps;
    }

    Recipient[] public recipients;
    IEpochCampaign public campaign;
    FeeDistributorFactory public immutable factory;
    IWETH public immutable weth;
    uint64 private constant MAX_TOKENS = 5;
    uint64 private constant MAX_RECIPIENTS = 5;
    /// @dev helper variable for base point conversion.
    uint88 private constant BASE = 10000;
    uint32 public nonce;

    bytes32 private constant DISTRIBUTE = keccak256("Distribute(address account,address contract,uint32 nonce,address[] tokens,uint256[] campaignAmounts,uint256[] recipientsAmounts)");

    /// @dev Custom Errors
    error ArrayLengthMismatch();
    error RecipientIsZeroAddress(uint256 index);
    error InvalidBpsValue(uint256 index);
    error InvalidBpsTotal();
    error InvalidRecipientsListLength();
    error InvalidAmount();
    error InsufficientBalance(address token);

    /// @dev Events
    event RecipientsUpdated(Recipient[] recipients);
    event TokenDistributed(address token, uint256 campaignAmount, uint256 recipientsAmount);
    event TokenWithdrawn(address token, uint256 amount);
    event Received(address indexed sender, uint256 amount);

    /**
     * @dev Constructor to set the WETH address.
     * @param _wethAddress Address of the WETH token.
     */
    constructor(address _wethAddress) SignatureVerifier("FeeDistributor", "v1.0.0") {
        weth = IWETH(_wethAddress);
        factory = FeeDistributorFactory(_msgSender());
    }

    /**
     * @dev Initializes the contract with the EpochCampaign, supported tokens, recipients as well as sets the owner
     * @param _campaign Campaign address.
     * @param _tokens Array of addresses of the tokens to be supported.
     * @param _recipients Array of recipients to be added.
     * @param _creator Creator of this contract
     **/
    function initialize(
        IEpochCampaign _campaign,
        address[] calldata _tokens,
        Recipient[] calldata _recipients,
        address _creator
    ) external initializer {
        campaign = _campaign;
        _addSupportedTokens(_tokens);
        _setRecipients(_recipients);
        __Ownable_init();
        transferOwnership(_creator);
    }

    /**
     * @dev Distributes a list of tokens to either the campaign, recipients or both
     * @param _tokens A list of tokens, MUST be supported and should not contain duplicates
     * @param _campaignAmounts A list of amounts to be transferred to the campaign, each index relates to _tokens
     * @param _recipientsAmounts A list of amounts to be distributed to recipients, each index relates to _tokens
     * @param _signature Signature signed by an off-chain signer
     */
    function distribute(
        address[] calldata _tokens,
        uint256[] calldata _campaignAmounts,
        uint256[] calldata _recipientsAmounts,
        bytes calldata _signature
    ) external {
        /// @dev verify the signature
        _verify(abi.encode(DISTRIBUTE, msg.sender, address(this), nonce++, keccak256(abi.encodePacked(_tokens)), keccak256(abi.encodePacked(_campaignAmounts)), keccak256(abi.encodePacked(_recipientsAmounts))), _signature);

        uint256 totalIterations = _tokens.length;
        uint256 totalRecipients = recipients.length;
        if (totalIterations != _campaignAmounts.length || totalIterations != _recipientsAmounts.length) revert ArrayLengthMismatch();

        /// @dev used to optimize adding funds to the EpochCampaign
        uint256 fundsCount;
        IEpochCampaign.Funds[] memory fundsForEpoch = new IEpochCampaign.Funds[](totalIterations);

        for (uint256 tokenIndex; tokenIndex < totalIterations; tokenIndex++) {
            IERC20 token = IERC20(_tokens[tokenIndex]);
            if (!_isSupportedToken(address(token))) revert UnsupportedToken(address(token));

            uint256 tokenBalance = token.balanceOf(address(this));

            uint256 campaignAmount = _campaignAmounts[tokenIndex];
            uint256 recipientsAmount = _recipientsAmounts[tokenIndex];
            uint256 total = campaignAmount + recipientsAmount;

            if (address(token) == address(weth)) {
                /**
                 * @dev if the token is WETH and there isn't enough in the contract, the ETH balance of the contract
                 * is checked to see if it is sufficient to cover the "total" amount, if not, it will revert
                 */
                _handleWETH(tokenBalance, total);
            } else if (tokenBalance < total) {
                revert InsufficientBalance(address(token));
            }

            if (campaignAmount > 0) {
                /// @dev campaign.addFunds is not called here because we bulk add funds at the end
                fundsForEpoch[fundsCount] = IEpochCampaign.Funds(token, campaignAmount);
                /// @dev _tokens must be a deduplicated list otherwise the amount approved will be incorrect
                token.forceApprove(address(campaign), campaignAmount);
                fundsCount++;
            }
            if (recipientsAmount > 0) {
                /// @dev distribute to other recipients based on their BPS value
                for (uint256 recipientIndex; recipientIndex < totalRecipients; recipientIndex++) {
                    uint256 amount = recipientsAmount * recipients[recipientIndex].bps / BASE;
                    token.safeTransfer(recipients[recipientIndex].account, amount);
                }
            }
            emit TokenDistributed(address(token), campaignAmount, recipientsAmount);
        }
        if (0 < fundsCount) {
            /// @dev bulk add funds to the campaign
            IEpochCampaign.Funds[] memory optimizedFunds = new IEpochCampaign.Funds[](fundsCount);
            for (uint256 i; i < fundsCount; i++) {
                optimizedFunds[i] = fundsForEpoch[i];
            }
            campaign.addFunds(optimizedFunds);
        }
    }

    /**
     * @notice Withdraw a token from the contract (only Owner)
     * @param _token Token to withdraw, use WETH to withdraw ETH
     * @param _amount Amount to withdraw
     */
    function withdrawToken(address _token, uint256 _amount) external onlyOwner {
        if (_token == address(0)) revert TokenIsZeroAddress(0);
        if (_amount == 0) revert InvalidAmount();
        IERC20 token = IERC20(_token);
        uint256 tokenBalance = token.balanceOf(address(this));
        if (_token == address(weth)) {
            _handleWETH(tokenBalance, _amount);
        } else if (tokenBalance < _amount) {
            revert InsufficientBalance(address(token));
        }
        token.safeTransfer(owner(), _amount);
        emit TokenWithdrawn(_token, _amount);
    }

    function addSupportedTokens(address[] calldata _tokens) external override onlyOwner {
        _addSupportedTokens(_tokens);
    }

    function removeSupportedTokens(address[] calldata _tokens) external override onlyOwner {
        _removeSupportedTokens(_tokens);
    }

    /**
     * @notice Get a list of all the recipients
     * @return list All recipients
     */
    function getRecipients() public view returns (Recipient[] memory list) {
        /// @dev can safely return recipients because there can only be a maximum of 5 recipients
        return recipients;
    }

    /**
     * @notice Set the recipients to receive distributions, doing so removes all previous recipients (only Owner)
     * @param _recipients Recipients to distribute to
     */
    function setRecipients(Recipient[] calldata _recipients) external onlyOwner {
        _setRecipients(_recipients);
        emit RecipientsUpdated(_recipients);
    }

    /// @param _recipients Recipients to distribute to
    function _setRecipients(Recipient[] calldata _recipients) private {
        if (_recipients.length == 0 || _recipients.length > MAX_RECIPIENTS) revert InvalidRecipientsListLength();
        uint256 totalBps;
        delete recipients;
        for (uint256 i = 0; i < _recipients.length; i++) {
            if (_recipients[i].account == address(0)) revert RecipientIsZeroAddress(i);
            if (_recipients[i].bps == 0) revert InvalidBpsValue(i);
            recipients.push(_recipients[i]);
            totalBps += _recipients[i].bps;
        }
        if (totalBps != BASE) revert InvalidBpsTotal();
    }

    /**
     * @dev This function converts ETH into WETH, if there isn't enough WETH in the contract, provided the ETH balance
     * is sufficient
     * @param _wethBalance Balance of WETH in the contract
     * @param _amount Amount required in WETH
     */
    function _handleWETH(uint256 _wethBalance, uint256 _amount) private {
        if (_wethBalance < _amount) {
            uint256 ethBalance = address(this).balance;
            if (_wethBalance + ethBalance < _amount) {
                revert InsufficientBalance(address(weth));
            }
            IWETH(weth).deposit{value: _amount - _wethBalance}();
        }
    }

    function _maxSupportedTokens() internal pure override returns (uint128) {
        return MAX_TOKENS;
    }

    function _getOffChainSigner() internal view override returns (address) {
        return factory.getOffChainSigner();
    }

    receive() external payable {
        emit Received(msg.sender, msg.value);
    }
}

