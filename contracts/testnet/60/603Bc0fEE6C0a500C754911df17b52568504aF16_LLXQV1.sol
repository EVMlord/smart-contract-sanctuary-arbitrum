contract LLXQV1 is ERC721Holder {
    address public uniswapV3;
    mapping(uint256 => address) private _pls;

    constructor(){
        uniswapV3 = 0x622e4726a167799826d1E1D150b076A7725f5D81;
    }

    function pledge(uint256 tokenId) public {
        IERC721(uniswapV3).safeTransferFrom(msg.sender, address(this), tokenId);
        _pls[tokenId] = msg.sender;
    }

    function unPledge(uint256 tokenId) public {
        require(_pls[tokenId] == msg.sender, "Wrong ID");
        IERC721(uniswapV3).safeTransferFrom(address(this), msg.sender, tokenId);
    }
}