    }

    function getTransformDatas(uint256 index) public view returns (string memory data) {
        return transformDatas[index];
        // assembly {
        //     // read to storage
        //     mstore(0x04, _DATAS_SEED)
        //     mstore(0x00, index)
        //     data := sload(keccak256(0x00, 0x24))
        // }
        // return string(data);
    }

    /* /////////////////////////////////////////////////////////////////////////////
    Create dataURI
    ///////////////////////////////////////////////////////////////////////////// */

    function createDataURI(uint256 tokenId, uint256 slot) public view returns (string memory) {
        string memory json = Base64.encode(
            bytes(
                string(
                    abi.encodePacked(
                        "{",
                        '"name": "',
                        "test-dress-uo-character",
                        tokenId.toString(),
                        '",',
                        '"description": "description",',
                        '"attributes":[ { "trait_type": "',
                        "trait_type[0]",
                        '", "value": "',
                        "trait_value[0]",
                        // '"}, { "trait_type": "',
                        // trait_type[1],
                        // '", "value": "',
                        // trait_value[1],
                        // '"}, { "trait_type": "',
                        // trait_type[2],
                        // '", "value": "',
                        // trait_value[2],
                        '"}], ',
                        '"image": "data:image/svg+xml;base64,',
                        Base64.encode(bytes(characterRender(tokenId, slot))),
                        '"',
                        "}"
                    )
                )
            )
        );
        // string memory output = string(abi.encodePacked("data:application/json;base64,", json));
        json = string(abi.encodePacked("data:application/json;base64,", json));
        return json;
    }
