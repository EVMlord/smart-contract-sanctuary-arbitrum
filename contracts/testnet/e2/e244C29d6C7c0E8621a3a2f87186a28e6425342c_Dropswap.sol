pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/ERC20Burnable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "./DropswapUniswapAdaptor.sol";

contract Dropswap is ERC20, Ownable, ERC20Burnable {
    address public usdcContractAddress;
    address public wEthContractAddress;
    address public swapAdaptorAddress;

    address[] public addresses;

    struct User {
        address account;
        uint256 swapAmount;
    }

    mapping(address => User) public users;

    constructor(address _usdcContractAddress, address _wEthContractAddress)
        ERC20("dUSD", "dUSD")
    {
        usdcContractAddress = _usdcContractAddress;
        wEthContractAddress = _wEthContractAddress;
    }

    function deposit(uint256 amount, uint256 swapAmount) public {
        IERC20 usdc = IERC20(address(usdcContractAddress));

        usdc.transferFrom(msg.sender, address(this), amount);

        _mint(msg.sender, amount);

        if (users[msg.sender].account == address(0)) {
            addresses.push(msg.sender);

            users[msg.sender].account = msg.sender;
            users[msg.sender].swapAmount = swapAmount;
        }
    }

    function daysRemaining(address userAddress) public view returns (uint256) {
        return balanceOf(userAddress) / users[userAddress].swapAmount;
    }

    function swap() public {
        uint256 swapTotal = 0;
        uint256 userAmount;
        uint256 ethPrice;
        address userAddress;

        // step 1: figure what's the swap amount -> add up all user swapAmounts
        for (uint256 i = 0; i < addresses.length; i++) {
            userAddress = addresses[i];
            userAmount = users[userAddress].swapAmount;
            swapTotal += userAmount;
            // step 2: burn dUSD for each user
            // for each user burn their interval amount worth of dUSD
            _burn(userAddress, userAmount);
        }

        // step 3: call swap from uniswap adaptor
        DropswapUniswapAdaptor dropswapUniswapAdaptor = DropswapUniswapAdaptor(
            swapAdaptorAddress
        );

        // approve adaptor to swap USDC
        IERC20 usdc = IERC20(address(usdcContractAddress));
        IERC20 wEth = IERC20(address(wEthContractAddress));
        usdc.approve(swapAdaptorAddress, swapTotal);
        uint256 ethAmount = dropswapUniswapAdaptor.swap(swapTotal);

        ethPrice = ethAmount / swapTotal;

        // step 4: give eth back to every user
        //       IERC20 wEth = IERC20(address(wEthContractAddress));
        uint256 userAmountWorthOfwEth;

        for (uint256 i = 0; i < addresses.length; i++) {
            userAmountWorthOfwEth = users[userAddress].swapAmount * ethPrice;
            wEth.transfer(addresses[i], userAmountWorthOfwEth);
        }
    }

    function setAdaptor(address _swapAdaptorAddress) public onlyOwner {
        swapAdaptorAddress = _swapAdaptorAddress;
    }
}

