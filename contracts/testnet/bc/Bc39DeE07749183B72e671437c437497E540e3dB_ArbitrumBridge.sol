        require(_newSigner != address(0), "Zero Address");
        signer = _newSigner;
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unPause() external onlyOwner {
        _unpause();
    }

    function onERC721Received(
        address,
        address,
        uint256,
        bytes memory
    ) external pure override returns (bytes4) {
        return this.onERC721Received.selector;
    }

    function mint(
        address to,
        uint256[] calldata tokenIds,
        bytes calldata signature,
        uint8 chainId,
        uint256 _nonce
    ) external whenNotPaused {
        require(
            keccak256(abi.encodePacked(to, tokenIds, chainId, _nonce))
                .toEthSignedMessageHash()
                .recover(signature) == signer,
            "Signature not valid"
        );
        require(!nonceUsed[_nonce], "Nonce already used");
        nonceUsed[_nonce] = true;
        ISmolBirb(smolBirb).mint(to, tokenIds);
        emit Minted(to, tokenIds);
    }

    function burn(uint256[] calldata tokenIds) external whenNotPaused {
        ISmolBirb(smolBirb).burnFrom(msg.sender, tokenIds);
        nonce++;
        emit Burnt(msg.sender, tokenIds, nonce);
    }
