            ABDKMath64x64.mulu(
                _pow(
                    ABDKMath64x64.add(
                        ABDKMath64x64.fromUInt(1),
                        ABDKMath64x64.divu(ratio, BASE)
                    ),
                    n
                ),
                BASE
            );
    }

    function _fragmentsToCaviar(
        uint256 fragments,
        uint256 scalingFactor
    ) internal pure returns (uint256) {
        return fragments.mul(scalingFactor).div(internalDecimals);
    }

    function _caviarToFragments(
        uint256 caviar,
        uint256 scalingFactor
    ) internal pure returns (uint256) {
        return caviar.mul(internalDecimals).div(scalingFactor);
    }

    constructor() ERC20("Caviar", "CAVIAR") {
        _grantRole(DEFAULT_ADMIN_ROLE, _msgSender());

        totalFragments = _caviarToFragments(
            initialCaviarSupply,
            caviarScalingFactor
        );

        _fragmentsBalances[_msgSender()] = totalFragments;

        emit Transfer(address(0), _msgSender(), initialCaviarSupply);
    }

    function setLpPool(
        IUNIV2PAIR _lpPool
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        lpPool = _lpPool;

        emit SetLpPool(lpPool);
    }

    function addVault(IVAULT _vault) external onlyRole(DEFAULT_ADMIN_ROLE) {
        _grantRole(VAULT_ROLE, address(_vault));
        vaults.push(_vault);

        emit AddVault(vaults[vaults.length.sub(1)]);
    }

    function setMaxChange(
        uint256 _maxChange
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        maxChange = _maxChange;

        emit SetMaxChange(maxChange);
    }

    function setBaseRatio(
        uint256 _baseRatio
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        baseRatio = _baseRatio;

        emit SetBaseRatio(baseRatio);
    }

    function setCricDuration(
        uint256 _cricDuration
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        cricDuration = _cricDuration;

        emit SetCricDuration(cricDuration);
    }

    function setIsDebase() external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(isDebase == false);
        isDebase = true;
        baseBlock = arbSys.arbBlockNumber();

        emit SetIsDebase(isDebase);
    }

    function _debaseCaviarScalingFactor() internal view returns (uint256) {
        uint256 blockDiff = arbSys.arbBlockNumber().sub(baseBlock);
        if (isDebase == false || blockDiff == 0) return caviarScalingFactor;

        return
            caviarScalingFactor
                .mul(
                    BASE.sub(
                        compound(baseRatio.add(cricRatio), blockDiff).sub(BASE)
                    )
                )
                .div(BASE);
    }

    function _updateCaviarScaling() internal {
        caviarScalingFactor = _debaseCaviarScalingFactor();
        baseBlock = arbSys.arbBlockNumber();

        emit UpdateCaviarData(caviarScalingFactor, baseBlock);
    }

    function getCiculatingBalance() public view returns (uint256) {
        uint256 poolFragments = _fragmentsBalances[address(lpPool)];

        return
            _fragmentsToCaviar(
                totalFragments.sub(poolFragments),
                _debaseCaviarScalingFactor()
            );
    }

    function getLockedBalance() public view returns (uint256) {
        uint256 locked = _fragmentsToCaviar(
            _fragmentsBalances[address(lpPool)],
            lpPoolScalingFactor
        );

        for (uint i = 0; i < vaults.length; i++) {
            if (hasRole(VAULT_ROLE, address(vaults[i]))) {
                locked += vaults[i].totalStaked();
            }
        }
        return locked;
    }

    function setIsCric() external onlyRole(DEFAULT_ADMIN_ROLE) {
        _updateCaviarScaling();
        isCric = !isCric;

        if (isCric) {
            cricBlock = arbSys.arbBlockNumber().add(cricDuration);
            cricBefore = getCiculatingBalance();
        } else if (cricBlock > 0) {
            cricRatio = 0;
        }
    }

    /**
     * @return The total number of fragments.
     */
    function totalSupply() public view override returns (uint256) {
        return getCiculatingBalance().add(getLockedBalance());
    }

    /**
     * @param who The address to query.
     * @return The balance of the specified address.
     */
    function balanceOf(address who) public view override returns (uint256) {
        return
            _fragmentsToCaviar(
                _fragmentsBalances[who],
                who == address(lpPool)
                    ? lpPoolScalingFactor
                    : _debaseCaviarScalingFactor()
            );
    }

    function _getPercentageChange(
        uint256 num,
        uint256 dom
    ) internal pure returns (uint256) {
        return
            ABDKMath64x64.mulu(
                ABDKMath64x64.sub(
                    ABDKMath64x64.fromUInt(1),
                    ABDKMath64x64.divu(num, dom)
                ),
                BASE
            );
    }

    function _updateCricScaling() internal {
        if (isCric && arbSys.arbBlockNumber() >= cricBlock) {
            uint256 circulating = getCiculatingBalance();

            if (circulating != cricBefore) {
                uint256 percentage;
                uint256 ratio;
                if (circulating < cricBefore) {
                    percentage = _getPercentageChange(circulating, cricBefore);

                    ratio = percentage.mul(baseRatio).div(maxChange);

                    cricRatio = cricRatio > ratio ? cricRatio.sub(ratio) : 0;
                } else {
                    percentage = _getPercentageChange(cricBefore, circulating);

                    ratio = percentage.mul(baseRatio).div(maxChange);

                    uint256 sum = cricRatio.add(ratio);
                    cricRatio = sum >= baseRatio ? baseRatio : sum;
                }
            }

            cricBlock = arbSys.arbBlockNumber().add(cricDuration);
            cricBefore = circulating;

            emit UpdateCricData(cricRatio, cricBlock, cricBefore);
        }
    }

    /**
     * @notice Mints new tokens, increasing totalSupply, totalFragments, and a users balance.
     */
    function mint(
        address to,
        uint256 amount
    ) external onlyRole(VAULT_ROLE) returns (bool) {
        _updateCaviarScaling();
        _mint(to, amount);
        _updateCricScaling();

        return true;
    }

    function _maxScalingFactor() internal view returns (uint256) {
        return uint256(int256(-1)) / totalFragments;
    }

    function _mint(address to, uint256 amount) internal override {
        uint256 fragments = _caviarToFragments(amount, caviarScalingFactor);
        totalFragments = totalFragments.add(fragments);

        require(
            caviarScalingFactor <= _maxScalingFactor(),
            "max scaling factor too low"
        );

        _fragmentsBalances[to] = _fragmentsBalances[to].add(fragments);

        emit Transfer(address(0), to, amount);
    }

    /**
     * @notice Burns tokens from _msgSender(), decreases totalSupply, totalFragments, and a users balance.
     */
    function burn(uint256 amount) public onlyRole(VAULT_ROLE) {
        _burn(amount);
    }

    function _burn(uint256 amount) internal {
        uint256 fragments = _caviarToFragments(amount, caviarScalingFactor);
        totalFragments = totalFragments.sub(fragments);

        _fragmentsBalances[_msgSender()] = _fragmentsBalances[_msgSender()].sub(
            fragments
        );

        emit Transfer(_msgSender(), address(0), amount);
    }

    function _checkFragmentsAndTransfer(
        address from,
        address to,
        uint256 value
    ) internal {
        uint256 fragments = _caviarToFragments(
            value,
            _msgSender() != address(lpPool)
                ? caviarScalingFactor
                : lpPoolScalingFactor
        );

        if (to == address(lpPool)) {
            lpPoolScalingFactor = balanceOf(address(lpPool))
                .add(value)
                .mul(internalDecimals)
                .mul(1e18)
                .div(_fragmentsBalances[address(lpPool)].add(fragments))
                .div(1e18);

            lpPool.sync();

            emit UpdateLpPoolScaling(lpPoolScalingFactor);
        }

        uint256 maxFragments = _fragmentsBalances[from];

        if (fragments > maxFragments) {
            _fragmentsBalances[from] = 0;
            _fragmentsBalances[to] = _fragmentsBalances[to].add(maxFragments);
        } else {
            _fragmentsBalances[from] = _fragmentsBalances[from].sub(fragments);
            _fragmentsBalances[to] = _fragmentsBalances[to].add(fragments);
        }

        emit Transfer(from, to, value);
    }

    /**
     * @dev Transfer tokens to a specified address.
     * @param to The address to transfer to.
     * @param value The amount to be transferred.
     * @return result True on success, false otherwise.
     */
    function transfer(
        address to,
        uint256 value
    ) public override validRecipient(to) returns (bool result) {
        _updateCaviarScaling();

        _checkFragmentsAndTransfer(_msgSender(), to, value);

        _updateCricScaling();
        return true;
    }

    /**
     * @dev Transfer tokens from one address to another.
     * @param from The address you want to send tokens from.
     * @param to The address you want to transfer to.
     * @param value The amount of tokens to be transferred.
     */
    function transferFrom(
        address from,
        address to,
        uint256 value
    ) public override validRecipient(to) returns (bool) {
        _updateCaviarScaling();

        _allowedCaviar[from][_msgSender()] = _allowedCaviar[from][_msgSender()]
            .sub(value);
        _checkFragmentsAndTransfer(from, to, value);

        _updateCricScaling();
        return true;
    }

    /**
     * @dev Function to check the amount of tokens that an owner has allowed to a spender.
     * @param owner_ The address which owns the funds.
     * @param spender The address which will spend the funds.
     * @return The number of tokens still available for the spender.
     */
    function allowance(
        address owner_,
        address spender
    ) public view override returns (uint256) {
        return _allowedCaviar[owner_][spender];
    }

    /**
     * @dev Approve the passed address to spend the specified amount of tokens on behalf of
     * _msgSender(). This method is included for ERC20 compatibility.
     * increaseAllowance and decreaseAllowance should be used instead.
     * Changing an allowance with this method brings the risk that someone may transfer both
     * the old and the new allowance - if they are both greater than zero - if a transfer
     * transaction is mined before the later approve() call is mined.
     *
     * @param spender The address which will spend the funds.
     * @param value The amount of tokens to be spent.
     */
    function approve(
        address spender,
        uint256 value
    ) public override returns (bool) {
        _allowedCaviar[_msgSender()][spender] = value;
        emit Approval(_msgSender(), spender, value);
        return true;
    }

    /**
     * @dev Increase the amount of tokens that an owner has allowed to a spender.
     * This method should be used instead of approve() to avoid the double approval vulnerability
     * described above.
     * @param spender The address which will spend the funds.
     * @param addedValue The amount of tokens to increase the allowance by.
     */
    function increaseAllowance(
        address spender,
        uint256 addedValue
    ) public override returns (bool) {
        _allowedCaviar[_msgSender()][spender] = _allowedCaviar[_msgSender()][
            spender
        ].add(addedValue);

        emit Approval(
            _msgSender(),
            spender,
            _allowedCaviar[_msgSender()][spender]
        );
        return true;
    }

    /**
     * @dev Decrease the amount of tokens that an owner has allowed to a spender.
     *
     * @param spender The address which will spend the funds.
     * @param subtractedValue The amount of tokens to decrease the allowance by.
     */
    function decreaseAllowance(
        address spender,
        uint256 subtractedValue
    ) public override returns (bool) {
        uint256 oldValue = _allowedCaviar[_msgSender()][spender];

        if (subtractedValue >= oldValue) {
            _allowedCaviar[_msgSender()][spender] = 0;
        } else {
            _allowedCaviar[_msgSender()][spender] = oldValue.sub(
                subtractedValue
            );
        }

        emit Approval(
            _msgSender(),
            spender,
            _allowedCaviar[_msgSender()][spender]
        );

        return true;
    }
}

