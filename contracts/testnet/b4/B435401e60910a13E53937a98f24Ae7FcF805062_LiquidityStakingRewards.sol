import {PeripheryPayments} from "./PeripheryPayments.sol";

import {RewardDistributor} from "../../RewardDistributor.sol";

contract LiquidityStakingRewards is RewardDistributor, PeripheryPayments, UUPSUpgradeable, ERC721HolderUpgradeable, ReentrancyGuardUpgradeable {

    using SafeMath for uint256;
    using SafeMath for uint128;

    struct StakeData {
        uint256 timestamp;
        uint256 earnedAmount;
        uint256 lastRewardsTotalAmount;  //最近账户添加减少流动性抵押，的总奖励数额
        uint128 liquidity;
    }

    address public immutable positionManagerAddress;

    uint256 public totalRewardsRatio;

    /// @dev liquidityPoolTokenId => TotalSupply
    mapping(uint256 => uint256) public liquidityPoolTotalSupplyMapping;

    /// @dev liquidityPoolTokenId => startTime
    mapping(uint256 => uint256) public liquidityPoolStartTimeMapping;

    /// @dev liquidityPoolTokenId => rewardsRatio
    mapping(uint256 => uint256) public liquidityPoolRewardsRatioMapping;

    /// @dev account => liquidityPoolTokenId => StakeData
    mapping(address => mapping(uint256 => StakeData)) public accountStakeDataMapping;

    constructor(address treasury_,
        address rewardsToken_,
        address positionManagerAddress_,
        address WETH9_)
        PeripheryPayments(WETH9_)
        RewardDistributor(rewardsToken_, 60, 1000)  // 60=60s;43200=12H
    {
        treasury = treasury_;
        positionManagerAddress = positionManagerAddress_;
        require(INonfungiblePositionManager(positionManagerAddress).WETH9() == WETH9_, 'LiquidityStakingRewards: wrapper native token not equal');
        //
        initialize();
        _disableInitializers();
    }

    function initialize() initializer public {
        __Pausable_init();
        __Pausable_init_unchained();
        //
        __Ownable_init();
        __Ownable_init_unchained();
        //
        __UUPSUpgradeable_init();
        __UUPSUpgradeable_init_unchained();
        //
        __ReentrancyGuard_init();
        __ReentrancyGuard_init_unchained();
    }

    function _authorizeUpgrade(address newImplementation) internal onlyOwner override {

    }

    modifier isValid(uint256 liquidityPoolTokenId, uint256 token0Amount, uint256 token1Amount) {
        // 双边token 数额必须大于0
        require(token0Amount > 0 && token1Amount > 0, "LiquidityStakingRewards: token amount must greater than 0");
        // 必须持有 liquidityPoolTokenId
        require(IERC721Enumerable(positionManagerAddress).ownerOf(liquidityPoolTokenId) == address(this), "LiquidityStakingRewards: not token owner");
        _;
    }

    /// @dev 用户奖励速度(每秒)
    function getLiquidityPoolRewardsSpeedByAccount(address account, uint256 liquidityPoolTokenId) public view returns (uint256) {
        //用户抵押数据
        StakeData storage accountStakeData = accountStakeDataMapping[account][liquidityPoolTokenId];
        if (liquidityPoolTotalSupplyMapping[liquidityPoolTokenId] > 0 && accountStakeData.liquidity > 0) {
            //流动池分成的奖励的数额
            uint256 liquidityPoolRewardsAmount = getLiquidityPoolRewardsSpeed(liquidityPoolTokenId);
            //账户的奖励数额 = 流动池分成的奖励的数额 / 总流动性 * 用户抵押的流动性
            return liquidityPoolRewardsAmount.div(liquidityPoolTotalSupplyMapping[liquidityPoolTokenId]).mul(accountStakeData.liquidity);
        }
        return 0;
    }

    /// @dev 全局奖励速率(每秒)
    function getGlobalLiquidityPoolRewardsSpeed() public view returns (uint256) {
        return periodRewardsTokenAmount.div(periodDuration);
    }

    /// @dev 流动池奖励速率(每秒)
    function getLiquidityPoolRewardsSpeed(uint256 liquidityPoolTokenId) public view returns (uint256) {
        //全局周期奖励Token速率
        uint256 globalLiquidityPoolRewardsSpeed = getGlobalLiquidityPoolRewardsSpeed();
        //流动池奖励比率
        uint256 liquidityPoolRewardsRatio = liquidityPoolRewardsRatioMapping[liquidityPoolTokenId];
        //
        return globalLiquidityPoolRewardsSpeed.mul(liquidityPoolRewardsRatio).div(10000);
    }

    function setLiquidityPoolRewardsRatio(uint256 liquidityPoolTokenId, uint256 newRatio) external isValid(liquidityPoolTokenId, 1, 1) onlyOwner {
        require(newRatio > 0 && newRatio <= 10000, "LiquidityStakingRewards: new ratio exceed 100% ");
        //减去旧的比例
        totalRewardsRatio -= liquidityPoolRewardsRatioMapping[liquidityPoolTokenId];
        //设置新的比例
        liquidityPoolRewardsRatioMapping[liquidityPoolTokenId] = newRatio;
        //累加新的比例
        totalRewardsRatio += newRatio;
        //
        require(totalRewardsRatio <= 10000, "LiquidityStakingRewards: total rewards ratio exceed 100% ");
    }

    function withdrawLiquidityPoolTokenId(uint256 liquidityPoolTokenId) external onlyOwner {
        IERC721Enumerable(positionManagerAddress).safeTransferFrom(address(this), _msgSender(), liquidityPoolTokenId);
    }

    function ownLiquidityPoolTokenIds(uint256 startIndex, uint256 endIndex) external view returns (uint256[] memory liquidityPoolTokenIds){
        uint256 balance = IERC721Enumerable(positionManagerAddress).balanceOf(address(this));
        if (balance > 0 && endIndex >= startIndex) {
            uint len = endIndex + 1 - startIndex;
            if (startIndex < balance) {
                uint arrayLen = len > balance ? balance : len;
                liquidityPoolTokenIds = new uint256[](arrayLen);
                uint index = 0;
                for (uint _i = startIndex; _i < ((endIndex < balance) ? endIndex : balance);) {
                    liquidityPoolTokenIds[index] = IERC721Enumerable(positionManagerAddress).tokenOfOwnerByIndex(address(this), _i);
                    unchecked{++_i; ++index;}
                }
            }
        }
        return liquidityPoolTokenIds;
    }

    function increaseLiquidity(INonfungiblePositionManager.IncreaseLiquidityParams calldata params) external payable isValid(params.tokenId, params.amount0Desired, params.amount1Desired) {
        // 取流动池
        (,,address token0,address token1,,,,,,,,) = INonfungiblePositionManager(positionManagerAddress).positions(params.tokenId);
        // 接收资金
        receipt(token0, _msgSender(), address(this), params.amount0Desired);
        receipt(token1, _msgSender(), address(this), params.amount1Desired);
        // 授权
        approve(token0, positionManagerAddress, params.amount0Desired);
        approve(token1, positionManagerAddress, params.amount1Desired);
        // 添加流动池
        (uint128 newIncreaseLiquidity, ,) = INonfungiblePositionManager(positionManagerAddress).increaseLiquidity{value : msg.value}(
            INonfungiblePositionManager.IncreaseLiquidityParams({
                tokenId : params.tokenId,
                amount0Desired : params.amount0Desired,
                amount1Desired : params.amount1Desired,
                amount0Min : params.amount0Min,
                amount1Min : params.amount1Min,
                deadline : params.deadline
            })
        );
        // 更新账户抵押数据
        updateAccountStakeData(_msgSender(), params.tokenId, true, newIncreaseLiquidity);
    }

    function decreaseLiquidity(uint256 liquidityPoolTokenId, uint256 amount0Min, uint256 amount1Min, uint128 liquidity) external payable isValid(liquidityPoolTokenId, amount0Min, amount1Min) {
        StakeData storage accountStakeData = accountStakeDataMapping[_msgSender()][liquidityPoolTokenId];
        require(accountStakeData.liquidity >= liquidity, "LiquidityStakingRewards: insufficient liquidity");
        // 减少做市
        (uint256 amount0, uint256 amount1) = INonfungiblePositionManager(positionManagerAddress).decreaseLiquidity(
            INonfungiblePositionManager.DecreaseLiquidityParams({
                tokenId : liquidityPoolTokenId,
                liquidity : liquidity,
                amount0Min : amount0Min,
                amount1Min : amount1Min,
                deadline : (block.timestamp + 600)
            })
        );
        require(amount0 >= amount0Min && amount1 >= amount1Min, "LiquidityStakingRewards: amount0Min or amount1Min slippage");
        // 更新账户抵押数据
        updateAccountStakeData(_msgSender(), liquidityPoolTokenId, false, liquidity);
    }

    function earned(address account, uint256 liquidityTokenId) public view returns (uint256) {
        StakeData storage accountStakeData = accountStakeDataMapping[account][liquidityTokenId];
        // 计算已做市的奖励
        if (accountStakeData.timestamp < block.timestamp) {
            uint256 stakeDuration = block.timestamp - accountStakeData.timestamp;
            //账户抵押流动池的每秒奖励数
            uint256 accountLiquidityPoolRewardsSpeed = getLiquidityPoolRewardsSpeedByAccount(account, liquidityTokenId);
            //用户已赚取的奖励数 = 抵押时长(秒) * 账户抵押流动池的每秒奖励数
            return accountStakeData.earnedAmount + stakeDuration.mul(accountLiquidityPoolRewardsSpeed);
        } else {
            return accountStakeData.earnedAmount;
        }
    }

    function claimEarned(uint256 liquidityTokenId, address recipient) external {
        uint256 accountEarnedAmount = earned(_msgSender(), liquidityTokenId);
        if (accountEarnedAmount > 0) {
            //转账
            IERC20(rewardsToken).transfer(recipient, accountEarnedAmount);
            //更新抵押数据
            StakeData storage accountStakeData = accountStakeDataMapping[_msgSender()][liquidityTokenId];
            //奖励总额 = 已分配奖励总额 + 未分配奖励总额
            uint256 rewardsTotalAmount = distributedRewardsTotalAmount.add(getUnDistributableRewardsAmount());
            accountStakeData.lastRewardsTotalAmount = rewardsTotalAmount;
            accountStakeData.timestamp = block.timestamp;
        }
    }

    function updateAccountStakeData(address account, uint256 liquidityTokenId, bool increaseOrDecrease, uint128 liquidity) private nonReentrant {
        StakeData storage accountStakeData = accountStakeDataMapping[account][liquidityTokenId];
        uint256 accountEarnedAmount = earned(account, liquidityTokenId);
        if (accountEarnedAmount != accountStakeData.earnedAmount) {
            accountStakeData.earnedAmount = accountEarnedAmount;
        }
        if (liquidity > 0) {
            if (increaseOrDecrease) {
                //添加流动性
                accountStakeData.liquidity = accountStakeData.liquidity + liquidity;
                //添加动性增加
                liquidityPoolTotalSupplyMapping[liquidityTokenId] = liquidityPoolTotalSupplyMapping[liquidityTokenId].add(liquidity);
            } else {
                //减少流动性
                accountStakeData.liquidity = accountStakeData.liquidity - liquidity;
                //减少总流动性
                liquidityPoolTotalSupplyMapping[liquidityTokenId] = liquidityPoolTotalSupplyMapping[liquidityTokenId].sub(liquidity);
            }
        }
        if (accountEarnedAmount != accountStakeData.earnedAmount || liquidity > 0) {
            accountStakeData.timestamp = block.timestamp;
            //奖励总额 = 已分配奖励总额 + 未分配奖励总额
            uint256 rewardsTotalAmount = distributedRewardsTotalAmount.add(getUnDistributableRewardsAmount());
            accountStakeData.lastRewardsTotalAmount = rewardsTotalAmount;
        }
    }

}

