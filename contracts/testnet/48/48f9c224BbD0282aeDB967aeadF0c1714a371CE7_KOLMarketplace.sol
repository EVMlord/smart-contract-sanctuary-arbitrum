    function claimKOLPayments(
        bytes calldata _signature,
        uint256[] calldata _offerIDs
    ) external {
        uint256 totalOffers = _offerIDs.length;
        _validateListLength(totalOffers);
        bytes memory data = abi.encode(CLAIM_PAYMENTS, msg.sender, keccak256(abi.encodePacked(_offerIDs)));
        _verify(data, _signature);
        for (uint256 i; i < _offerIDs.length;) {
            /// @dev no need to check _offerIDs[i] exists due to the caller address being checked
            Offer memory offer = _offers[_offerIDs[i]];
            if (offer.kol != _msgSender()) revert CallerIsNotKOL(_msgSender(), offer.kol);
            if (offer.paidTo == Party.None) {
                _offers[_offerIDs[i]].paidTo = Party.KOL;
                IERC20(offer.token).safeTransfer(_treasury, offer.fee);
                IERC20(offer.token).safeTransfer(offer.kol, offer.amount);
            }
            unchecked {
                i++;
            }
        }
        emit Payments(_msgSender(), _offerIDs);
    }

    /**
     * @notice Handle campaign payments (only Brands)
     * @param _signature Signature signed by an off-chain signer
     * @param _offerIDs A list of offer IDs
     * @param _payKOLs A list of booleans corresponding to indexes in _offerIDs. If true - pay KOL, if false - refund the brand
     */
    function handleCampaignPayments(
        bytes calldata _signature,
        uint256[] calldata _offerIDs,
        bool[] calldata _payKOLs
    ) external {
        uint256 totalOffers = _offerIDs.length;
        _validateListLength(totalOffers);
        _verify(abi.encode(HANDLE_CAMPAIGN_PAYMENTS, msg.sender, keccak256(abi.encodePacked(_offerIDs)), keccak256(abi.encodePacked(_payKOLs))), _signature);
        if (totalOffers != _payKOLs.length) revert ListLengthMismatch();
        address treasury = _treasury;
        for (uint256 i; i < totalOffers;) {
            /// @dev no need to check _offerIDs[i] exists due to the caller address being checked
            Offer memory offer = _offers[_offerIDs[i]];
            if (offer.brand != _msgSender()) revert CallerIsNotBrand(_msgSender(), offer.brand);
            if (offer.paidTo == Party.None) {
                if (_payKOLs[i]) {
                    _offers[_offerIDs[i]].paidTo = Party.KOL;
                    IERC20(offer.token).safeTransfer(offer.kol, offer.amount);
                    IERC20(offer.token).safeTransfer(treasury, offer.fee);
                } else {
                    _offers[_offerIDs[i]].paidTo = Party.Brand;
                    IERC20(offer.token).safeTransfer(offer.brand, offer.amount + offer.fee);
                }
            }
            unchecked {
                i++;
            }
        }
        emit Payments(_msgSender(), _offerIDs);
    }

    /**
     * @notice Get the total number of offers made
     * @return uint256 Total offers
     */
    function getTotalOffers() external view returns (uint256) {
        return _totalOffers;
    }

    /**
     * @notice Get an offers by offer ID
     * @param _offerID Offer ID
     * @return offer Offer associated with the _offerID
     */
    function getOffer(uint256 _offerID) public view returns (Offer memory offer) {
        if (_offerID >= _totalOffers) revert OfferNotFound(_offerID);
        offer = _offers[_offerID];
    }

    /**
     * @notice Get a list of offers from a list of offer IDs
     * @param _offerIDs A list of offer IDs (max length of 100 IDs)
     * @return offers A list of offers with each index corresponding to the ID in _offerIDs
     */
    function getOffers(uint256[] calldata _offerIDs) external view returns (Offer[] memory offers) {
        uint256 totalOffers = _offerIDs.length;
        _validateListLength(totalOffers);
        offers = new Offer[](totalOffers);
        for (uint256 i; i < totalOffers;) {
            offers[i] = getOffer(_offerIDs[i]);
            unchecked {
                i++;
            }
        }
    }

    /**
     * @notice Get the treasury address that receives the fees
     * @return address Treasury address
     */
    function getTreasury() external view returns (address) {
        return _treasury;
    }

    /**
     * @notice Get the fee applied when paying KOLs
     * @return uint256 Fee (1 d.p.)
     */
    function getFee() external view returns (uint256) {
        return _fee;
    }

    /**
     * @notice Calculate the fee charged on offers
     * @param _amount Amount of offer
     * @return uint256 Calculated fee
     */
    function calculateFee(uint256 _amount) external view returns (uint256) {
        return _calculateFee(_amount);
    }

    /// @param _newTreasury New treasury address
    function _setTreasury(address _newTreasury) private {
        if (_newTreasury == address(0)) revert InvalidTreasuryAddress();
        _treasury = _newTreasury;
    }

    /**
     * @param _amount Amount to calculate fee
     * @return uint256 Calculated fee
     */
    function _calculateFee(uint256 _amount) private view returns (uint256) {
        uint256 totalAmount = _amount * FEE_DENOMINATOR / (FEE_DENOMINATOR - _fee);
        return totalAmount - _amount;
    }

    /// @param _length Length of an array
    function _validateListLength(uint256 _length) private pure {
        if (_length == 0 || _length > MAX_ITERATIONS) revert InvalidListLength();
    }
}

