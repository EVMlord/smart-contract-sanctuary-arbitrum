    /// @notice onlyOwner - set the lock duration (seconds) for a pool
    function setLockDuration(uint256 _index, uint256 _lockDuration)
        external
        onlyOwner
    {
        poolInfo[_index].lockDuration = _lockDuration;
        emit LockDurationSet(_index, _lockDuration);
    }

    /// @notice onlyOwner - set the amount of $DANK rewards to distribute per block 
    function updateRewardPerBlock(uint256 _rewardPerBlock) external onlyOwner {
        massUpdatePools();
        rewardPerBlock = _rewardPerBlock;
        emit UpdatedRewardRate(_rewardPerBlock);
    }

    /// @notice onlyOwner - adds a new token pool
    function addPool(
        IERC20 _poolToken,
        uint256 _weight,
        bool _withUpdate,
        uint256 _kalmScalingFactor,
        uint256 _lockDuration
    ) external onlyOwner {
        if (_withUpdate) {
            massUpdatePools();
        }
        totalWeight = totalWeight + _weight;

        uint256 lastRewardBlock;
        if (block.number > startBlock) {
            lastRewardBlock = block.number;
        } else {
            lastRewardBlock = startBlock;
        }

        poolInfo.push(
            PoolInfo({
                poolToken: _poolToken,
                amount: 0,
                weight: _weight,
                lastRewardBlock: lastRewardBlock,
                accDankRewards: 0,
                kalmScalingFactor: _kalmScalingFactor,
                lockDuration: _lockDuration
            })
        );
        emit NewPool(poolInfo.length - 1, _weight, _poolToken, _kalmScalingFactor, _lockDuration);
    }

    /// @notice onlyOwner - update the given pool's dank reward weight and kalm fraction
    /// @dev kalm reward ratio of 1e5 === 1:1
    function setPoolRewards(
        uint256 _index,
        uint256 _weight,
        bool _withUpdate,
        uint256 _kalmScalingFactor
    ) external onlyOwner {
        if (_withUpdate) {
            massUpdatePools();
        }
        totalWeight = totalWeight - poolInfo[_index].weight + _weight;

        poolInfo[_index].weight = _weight;
        poolInfo[_index].kalmScalingFactor = _kalmScalingFactor;
        emit LogSetPool(_index, _weight, _kalmScalingFactor);
    }

    /// @notice onlyOwner - debase rate per block (1e15 = 1%)
    function setDebaseRate(bool _withUpdate, uint256 _debaseRate) 
        external onlyOwner {
        if (_withUpdate) {
            massUpdatePools();
        }
        debaseRate = _debaseRate;
        emit LogSetDebase(_debaseRate);
    }

    /// INTERNAL ///

    function updateRewards(uint256 _index, address _account) internal {
        updatePool(_index);

        if (poolInfo[_index].amount == 0) {
            return;
        }

        UserInfo memory user = userInfo[_index][_account];

        uint256 eligibleRewards = poolInfo[_index].accDankRewards - user.prevPoolRewards;
        uint256 pending = (user.amount * eligibleRewards)  / poolInfo[_index].amount;

        if (pending > 0) {
            userRewards[_index][_account] += pending;
        }
    }

    function poolPendingRewards(uint256 _index) 
        internal 
        view
        returns (uint256) {
        if (block.number <= poolInfo[_index].lastRewardBlock) {
            return 0;
        }

        return (
            (block.number - poolInfo[_index].lastRewardBlock) 
            * rewardPerBlock 
            * poolInfo[_index].weight) 
            / totalWeight;
    }
}