contract CoinFlip { 
 
    using SafeMath for uint256; 
    uint256 public totalWins; 
    uint256 public totalLosses; 
    uint256 public totalFees; 
    uint256 public totalNetAmount; 
    address public owner;
    uint randNonce;

    constructor() { 
        owner = msg.sender;
    } 

    modifier onlyOwner {
        require(msg.sender == owner);
        _;
    }
 
    function flip(bool _guess) payable public returns (bool) { 
 
        if(msg.value < 0.0001 ether) { 
            revert("Bet must be higher than 0.0001 ETH!"); 
        } 

        if(msg.value > 0.1 ether) { 
            revert("Bet must be lower or equal to 0.1 ETH!"); 
        } 
 
        if(msg.value > address(this).balance) { 
            revert("Bet higher than contract balance!"); 
        } 

        uint bValue = uint(keccak256(abi.encodePacked(block.timestamp, msg.sender))) % 100;
        bool side = bValue > 50 ? true : false; 
 
        if (side == _guess) { 
 
            // Calculate win 
            uint256 fee = (msg.value / 100) * 3; 
            uint256 win = (msg.value * 2) - fee; 
 
            // Pay win 
            payable(msg.sender).transfer(win); 
 
            return true; 
 
        } else { 
            return false; 
        } 
    }
 
   
    function balance() public view returns (uint256) { 
        // Get total contract balance 
        return address(this).balance; 
    } 
 
    function deposit() payable public returns (bool) { 
        return true; 
    } 

    function withdraw(uint256 _amount) public onlyOwner returns (bool){
        // Let owner withdraw funds
        address payable sendTo = payable(address(owner));
        sendTo.transfer(_amount);
        return true;
    }
}