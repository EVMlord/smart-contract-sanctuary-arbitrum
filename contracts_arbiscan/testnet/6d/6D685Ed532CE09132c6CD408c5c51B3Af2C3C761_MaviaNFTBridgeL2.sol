import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/IERC721Upgradeable.sol";
import "./interfaces/arbitrum/Inbox.sol";
import "./interfaces/arbitrum/Outbox.sol";
import "./interfaces/arbitrum/ArbSys.sol";
import "./interfaces/arbitrum/AddressAliasHelper.sol";
import "./MaviaNFTBridge.sol";

contract MaviaNFTBridgeL2 is MaviaNFTBridge, ReentrancyGuardUpgradeable {
  ArbSys private constant _ARB_SYS = ArbSys(0x0000000000000000000000000000000000000064);
  address public l1Target;

  event L2ToL1TxCreated(uint256 indexed withdrawalId);

  /**
   * @dev Upgradable initializer
   */
  function __MaviaNFTBridgeL2_init(address _nft721Token, address _l1Target) public initializer {
    __MaviaNFTBridge_init(_nft721Token);
    __ReentrancyGuard_init();
    l1Target = _l1Target;
  }

  /**
   * @dev Update L2 target
   */
  function setL1Target(address _l1Target) external onlyOwner {
    require(_l1Target != address(0), "Invalid");
    l1Target = _l1Target;
  }

  /**
   * @dev Swap tokens which will be called from L2 network, results in L1
   */
  function depositToL1(uint256 _tokenId) external nonReentrant returns (uint256) {
    // Deposit NFT to Bridge on L2
    MaviaNFTBridge._deposit(_tokenId);

    // Withdraw NFT from Bridge on L1
    bytes memory data_ = abi.encodeWithSelector(MaviaNFTBridge.withdraw.selector, msg.sender, _tokenId);

    uint256 withdrawalId_ = _ARB_SYS.sendTxToL1(l1Target, data_);

    emit L2ToL1TxCreated(withdrawalId_);
    return withdrawalId_;
  }

  /**
   * @dev Swap tokens which will be called from L1 network
   * @notice only l1Target can update
   */
  function withdraw(address _to, uint256 _tokenId) external override nonReentrant {
    // To check that message came from L1, we check that the sender is the L1 contract's L2 alias.
    require(msg.sender == AddressAliasHelper.applyL1ToL2Alias(l1Target), "Only updateable by L1");
    //require(block.chainid == 0x1, "Only L1 network");

    MaviaNFTBridge._withdraw(_to, _tokenId);
  }
}

