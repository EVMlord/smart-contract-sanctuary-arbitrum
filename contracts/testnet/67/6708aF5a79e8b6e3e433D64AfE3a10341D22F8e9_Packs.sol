pragma solidity ^0.8.0;

import "./PackTypes.sol";

/// @dev Farmland - Packs Smart Contract
contract Packs is PackTypes {
    using SafeERC20 for IERC20;

// CONSTRUCTOR

    constructor (
          address itemsContractAddress,
          address itemSetsAddress
        ) PackTypes (itemSetsAddress,itemsContractAddress)
        {
            require(itemSetsAddress != address(0),      "Invalid Item Sets Contract address");
            require(itemsContractAddress != address(0), "Invalid Items Contract address");
        }

// MODIFIERS

    /// @dev Check if this account has already claimed the air dropped pack
    /// @param index to check
    modifier onlyUnclaimed(uint256 index, uint256 packID) {
        require (!isClaimed(index, packID), "Airdrop Pack Already Claimed");
        _; // Call the actual code
    }

// EVENTS

    event PackClaimed(address indexed account, uint256 packID, uint256 index, uint256 item, uint256 amount);
    event PackMinted(address indexed account, uint256 packID, uint256 item, uint256 amount);

// FUNCTIONS

    /// @dev PUBLIC: Claim air dropped packs
    /// @param index of the account in the merkleproof
    /// @param merkleProof of the air drop
    /// @param amount of packs to receive
    /// @param packID of the pack to mint
    function claimAirDrop(uint256 index, bytes32[] calldata merkleProof, uint256 amount, uint256 packID)
        external
        nonReentrant
        whenNotPaused
        onlyUnclaimed(index, packID)
        onlyWhenPackEnabled(packID)
    {
        bytes32 node = keccak256(abi.encodePacked(index, _msgSender(), amount));             // Hash node details
        Pack storage pack = packs[packID];                                                   // Shortcut accessor for the pack
        require(pack.packMerkleRoot[0] != 0,                                                 "Airdrop not available");
        require(MerkleProof.verify(merkleProof, packs[packID].packMerkleRoot, node),         "Invalid proof");
        if (pack.maxSupply != 0) {
            require(pack.totalSupply + amount <= pack.maxSupply,                             "Max supply exceeded");
        }
        pack.totalSupply += amount;                                                          // Increment Supply
        _setClaimed(index, packID);                                                          // Flag packs as claimed
        for (uint256 i = 0; i < amount; i++) {                                               // Mint the right amount of packs
            (uint256 itemToMint, uint256 totalToMint) = getRewardItem(packID);               // Calculate which item to mint
            emit PackClaimed(_msgSender(), packID, index, itemToMint, totalToMint);          // Write an event
            itemsContract.mintItem(itemToMint, totalToMint, _msgSender());                   // Mint reward items
        }
    }

    /// @dev PUBLIC: Claim a free pack
    /// @param index of the account on the allowlist
    /// @param packID of the pack to claim
    function claimPack(uint256 index,uint256 packID)
        external
        nonReentrant
        whenNotPaused
    {
        Pack storage pack = packs[packID];                                                  // Shortcut accessor for the pack
        require (pack.allowlist.length > 0 && index <= pack.allowlist.length,               "Index out of range");
        require (pack.allowlist[index].account == _msgSender(),                             "Caller not allowlisted");
        require (pack.allowlist[index].claimed == false,                                    "Pack Already Claimed");
        require (pack.active,                                                               "Pack inactive");
        uint256 amount = pack.allowlist[index].amount;                                      // Get the amount
        if (pack.maxSupply != 0) {
            require(pack.totalSupply + amount <= pack.maxSupply,                            "Max supply exceeded");
        }
        pack.totalSupply += amount;                                                          // Increment Supply
        pack.allowlist[index].claimed = true;                                                // Set claimed
        for (uint256 i = 0; i < amount; i++) {                                               // Mint an amount of packs
            (uint256 itemToMint, uint256 totalToMint) = getRewardItem(packID);               // Calculate which item to mint
            emit PackClaimed(_msgSender(), packID, index, itemToMint, totalToMint);          // Write an event
            itemsContract.mintItem(itemToMint, totalToMint, _msgSender());                   // Mint reward items
        }
    }

    /// @dev PUBLIC: Buy a pack
    /// @param packID of the pack to mint
    /// @param amount of packs to buy
    function mintPack(uint256 packID, uint256 amount)
        external
        nonReentrant
        whenNotPaused
        onlyWhenPackEnabled(packID)
    {
        require (amount > 0,                                                                 "Amount should more than zero");
        require (amount < 101,                                                               "Exceeds the maximum amount");
        Pack storage pack = packs[packID];                                                   // Shortcut accessor for the pack
        if (pack.maxSupply != 0) {                                                           // Check pack isn't infinte mint
            require(pack.totalSupply + amount <= pack.maxSupply,                             "Max supply exceeded");
        }
        pack.totalSupply += amount;                                                          // Increment Supply
        for (uint256 i = 0; i < amount; i++) {                                               // Mint an amount of packs
            (uint256 itemToMint, uint256 totalToMint) = getRewardItem(packID);               // Calculate which item to mint
            itemsContract.mintItem(itemToMint, totalToMint, _msgSender());                   // Mint reward items
            emit PackMinted(_msgSender(), packID, itemToMint, totalToMint);                  // Write an event
        }
        if (pack.paymentAddress != address(0)) {                                             // Check if a payable Pack
            IERC20 paymentContract = IERC20(pack.paymentAddress);                            // Setup the payment contract
            uint256 priceToPay = pack.price * amount;                                        // Calculate price to pay
            require( paymentContract.balanceOf(_msgSender()) >= priceToPay,                  "Balance too low");
            paymentContract.safeTransferFrom(_msgSender(), address(this), priceToPay);       // Take the payment for the item
        }
    }

// HELPER FUNCTIONS

    /// @dev Return a reward item & amount to mint 
    function getRewardItem(uint256 packID)
        internal
        returns (
            uint256 itemToMint,
            uint256 totalToMint
        )
    {
        uint256[] memory randomNumbers = new uint256[](3);
        Pack storage pack = packs[packID];                                          // Shortcut accessor for the pack
        uint256 packItemSet = pack.itemSet;                                         // Declare & set the pack item set to work from
        randomNumbers = getRandomNumbers(3);                                        // Return some random numbers
        uint256 random = randomNumbers[0] % 1000;                                   // Choose a random number between 0-999
        uint256 rarityBucket;                                                       // Initialise local variable
        uint256 total = itemSetsContract.totalItemsInSet(packItemSet);              // Initialise to store length of array
        require (total > 0,                                                         "ADMIN: No items registered");
        for (uint i = 0; i < total ; i++) {                                         // Loop through the array
            if (random > pack.rarityPercentage[i] &&
                itemSetsContract.countsBySetAndRarity(packItemSet,i) > 0) {         // Choost rarity & ensure an item is registered
                rarityBucket = i;                                                   // Set the rarity bucket
                break;                                                              // Move on
            }
        }
        Item[] memory packItems = 
                    itemSetsContract.getItemSetByRarity(packItemSet, rarityBucket); // Retrieve the list of items
        uint256 itemIndex = randomNumbers[1] % packItems.length;                    // Randomly choose item to mint
        itemToMint = packItems[itemIndex].itemID;                                   // Finds the items ID
        uint256 cap = packItems[itemIndex].value1;                                  // Calculate cap
        totalToMint = (randomNumbers[2] % cap);                                     // Random number capped @ cap
        if (totalToMint == 0) { totalToMint = 1;}                                   // Ensure at least 1 item is found
    }

// INTERNAL FUNCTIONS

    /// @dev Flag Free Pack as claimed
    /// @param index of address
    function _setClaimed(uint256 index, uint256 packID)
        private 
    {
        uint256 claimedWordIndex = index / 256;
        uint256 claimedBitIndex = index % 256;
        packs[packID].packClaimedBitMap[claimedWordIndex] = packs[packID].packClaimedBitMap[claimedWordIndex] | (1 << claimedBitIndex);
    }

//VIEWS

    /// @dev Check if index has been claimed
    /// @param index of address
    function isClaimed(uint256 index, uint256 packID)
        public
        view
        returns (bool) 
    {
        uint256 claimedWordIndex = index / 256;
        uint256 claimedBitIndex = index % 256;
        uint256 claimedWord = packs[packID].packClaimedBitMap[claimedWordIndex];
        uint256 mask = (1 << claimedBitIndex);
        return claimedWord & mask == mask;
    }

}

