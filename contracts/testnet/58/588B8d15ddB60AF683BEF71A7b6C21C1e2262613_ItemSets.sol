import "../items/interfaces/IItems.sol";

struct Item {uint256 itemID; uint256 itemType; uint256 itemSet; uint256 rarity; uint256 value1; uint256 value2;}

/// @dev Farmland - Item Registration Smart Contract
contract ItemSets is Permissioned {

// CONSTRUCTOR

    constructor (
        address itemsContractAddress
        ) Permissioned()
    {
        require(itemsContractAddress != address(0),            "Invalid Items Contract address");
        itemsContract = IItems(itemsContractAddress);  // Define the ERC1155 Items Contract 
    }

// MODIFIERS

// STATE VARIABLES

    /// @dev The Farmland Items contract
    IItems internal immutable itemsContract;

    /// @dev  List of items that are available for minting
    Item[] public items;

    /// @dev Count the number of items by set then type with specific rarity = [common total, uncommon total, rare total, epic total, legendary total]
    mapping (uint256 => mapping (uint256 => uint256[5])) public countsBySetTypeAndRarity;
    
    /// @dev Count the number of items in a set with specific rarity = [common total, uncommon total, rare total, epic total, legendary total]
    mapping(uint256 => uint256[5]) public countsBySetAndRarity;

    /// @dev Count the number of items in a set
    mapping(uint256 => uint256) public totalItemsInSet;

// EVENTS

event ItemRegistered (address indexed account, uint256 itemID, uint256 itemType, uint256 itemSet);
event ItemDeregistered (address indexed account, uint256 itemID, uint256 itemType, uint256 itemSet);

// ADMIN FUNCTIONS
  
    /// @dev Register items
    /// @param itemID ItemID
    /// @param itemSet Used to group items into a set
    /// @param itemValue1 Custom field ... can be used to register quest specific details (eg. item scacity cap, amount of land that can be found with certain items)
    /// @param itemValue2 Another custom field
    function registerItem(uint256 itemID, uint256 itemSet, uint256 itemValue1, uint256 itemValue2)
        external
        onlyOwner
        {
            (,,,,,,uint256 itemRarity,uint256 itemType,) = itemsContract.items(itemID);      // Store the item rarity & type
            items.push(Item(itemID, itemType, itemSet, itemRarity, itemValue1, itemValue2)); // Register the item
            countsBySetTypeAndRarity[itemSet][itemType][itemRarity]++;                       // Increment the count of items by set, type & rarity
            countsBySetAndRarity[itemSet][itemRarity]++;                                     // Increment the count of items by set & rarity
            totalItemsInSet[itemSet]++;                                                      // Increment the count of items in a set
            emit ItemRegistered (_msgSender(), itemID, itemType, itemSet);                   // Write an event
        }

    /// @dev Deregister items for minting as rewards
    /// @param index index of item in array
    function deregisterItem(uint256 index)
        external
        onlyOwner
    {
        uint256 itemID = items[index].itemID;                           // Store the item ID
        uint256 itemRarity = items[index].rarity;                       // Store the item rarity
        uint256 itemType = items[index].itemType;                       // Store the item type
        uint256 itemSet = items[index].itemSet;                         // Store the item set
        items[index] = items[items.length - 1];                         // In the items array swap the last item for the item being removed
        countsBySetTypeAndRarity[itemSet][itemType][itemRarity]--;      // Increment the count of items by set, type & rarity
        countsBySetAndRarity[itemSet][itemRarity]--;                    // Increment the count of items by set & rarity
        totalItemsInSet[itemSet]--;                                     // Increment the count of items in a set
        items.pop();                                                    // Delete the final item in the items array
        emit ItemDeregistered(_msgSender(), itemID, itemType, itemSet); // Write an event
    }

// VIEWS

    /// @dev Retrieve list of items
    function getItems()
        external
        view
        returns (Item[] memory allItems)                                 // Define the array of items to be returned.        
    {
        return items;
    }

