contract TokenInfoContract {
    constructor() {}

    struct TokenInfo {
        string name;
        string symbol;
        uint8 decimals;
        uint256 balance;
        uint256 totalSupply;
    }

    struct LPTokenInfo {
        address token0;
        string token0Name;
        string token0Symbol;
        uint8 token0Decimals;
        address token1;
        string token1Name;
        string token1Symbol;
        uint8 token1Decimals;
    }

    function getTokenInfo(address token, address account) external view returns(TokenInfo memory tokenInfo) {
        tokenInfo.name = IERC20Metadata(token).name();
        tokenInfo.symbol = IERC20Metadata(token).symbol();
        tokenInfo.decimals = IERC20Metadata(token).decimals();
        tokenInfo.balance = IERC20Metadata(token).balanceOf(account);
        tokenInfo.totalSupply=  IERC20Metadata(token).totalSupply();
    }

    function getLPTokenInfo(address lpToken) external view returns(LPTokenInfo memory lpTokenInfo) {
        lpTokenInfo.token0 = IUniswapV2Pair(lpToken).token0();
        lpTokenInfo.token0Name = IERC20Metadata(lpTokenInfo.token0).name();
        lpTokenInfo.token0Symbol = IERC20Metadata(lpTokenInfo.token0).symbol();
        lpTokenInfo.token0Decimals = IERC20Metadata(lpTokenInfo.token0).decimals();
        lpTokenInfo.token1 = IUniswapV2Pair(lpToken).token1();
        lpTokenInfo.token1Name = IERC20Metadata(lpTokenInfo.token1).name();
        lpTokenInfo.token1Symbol = IERC20Metadata(lpTokenInfo.token1).symbol();
        lpTokenInfo.token1Decimals = IERC20Metadata(lpTokenInfo.token1).decimals();
    }
}