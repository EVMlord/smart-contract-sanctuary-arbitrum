            return 50000000000000000000; // 50 ANT
        }

        //there was a claim
        require(
            block.timestamp > lastClaimDate,
            "must be smaller than block timestamp"
        );

        uint256 secondsElapsed = block.timestamp - lastClaimDate;
        uint256 accumulatedReward = (secondsElapsed * emissionRate) / 1 days;
        return accumulatedReward;
