abstract contract ERC1155Supply is ERC1155 {
    /// -----------------------------------------------------------------------
    /// Mutable Storage
    /// -----------------------------------------------------------------------

    /// @notice A mapping from token IDs to the sum of balances for that given token ID.
    mapping(uint256 id => uint256 supply) public totalSupply;

