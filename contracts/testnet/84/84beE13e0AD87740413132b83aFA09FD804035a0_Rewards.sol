    mapping(address => mapping(uint256 => Claim)) private claims;

    function initialize(address initialOwner_) external initializer {
        __Operatable_init(initialOwner_);
    }

    function addReward(
        uint256 _id,
        uint256 _questId,
        uint256 _tokenAmount,
        address _tokenAddress,
        uint256 _tokenId,
        TokenType _tokenType,
        uint256 _maxClaims
    ) external onlyOperator {
        if (_tokenAddress == address(0)) {
            revert ZeroAddress();
        }
        if (_maxClaims == 0) {
            revert ZeroMaxClaims();
        }
        if (
            _tokenType == TokenType.ERC20 &&
            (_tokenAmount == 0 || IERC20(_tokenAddress).balanceOf(address(this)) < _tokenAmount)
        ) {
            revert InvalidERC20Reward(_tokenAddress, _tokenAmount);
        }
        if (_tokenType == TokenType.ERC721 && IERC721(_tokenAddress).ownerOf(_tokenId) != address(this)) {
            revert InvalidERC721Reward(_tokenAddress, _tokenId);
        }
