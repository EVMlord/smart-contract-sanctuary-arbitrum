    address dropswapProtocolAddress;
    address usdcTokenAddress;
    address wEthTokenAddress;

    constructor(
        ISwapRouter _swapRouter,
        address _dropswapProtocolAddress,
        address _usdcTokenAddress,
        address _wEthTokenAddress
    ) {
