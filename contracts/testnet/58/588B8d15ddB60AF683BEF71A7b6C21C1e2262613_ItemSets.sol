                     items[i].itemType == itemType )                        // Does the item have the specified type
                    {
                            totalWithItemRarity++;                          // Increment total
                    }
            }
            Item[] memory _itemsByRarityAndType = new Item[](totalWithItemRarity);
            uint256 index = 0;
            for(uint256 i = 0; i < total; i++){                         // Loop through the items to populate the final array
                if ( items[i].rarity == itemRarity &&                       // Does the item have the specified rarity
                     items[i].itemSet == itemSet &&                         // Does the item have the specified set
                     items[i].itemType == itemType )                        // Does the item have the specified type
