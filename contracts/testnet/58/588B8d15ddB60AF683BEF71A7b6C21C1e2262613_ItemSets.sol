    /// @param itemSet Item Set e.g., a grouping of items for selection
    function getItemsBySet(uint256 itemSet)
        external
        view
        returns (Item[] memory itemsBySet)                             // Define the array of items to be returned.        
    {
        uint256 total = items.length;                                  // Store the total items in a local variable
        uint256 totalWithItemSet = 0;
        if ( total == 0 ) {                                            // If no items found
            return itemsBySet;                                         // Return an empty array
        } else {
            for(uint256 i = 0; i < total; i++){                        // Loop through the items to determine the count
                if ( items[i].itemSet == itemSet )                     // Does the item below in the set
                {
                    totalWithItemSet++;                                // Increment total
                }
            }
            Item[] memory _itemsBySet = new Item[](totalWithItemSet);
            uint256 index = 0;
            for(uint256 i = 0; i < total; i++){                       // Loop through the items to populate the array
                if ( items[i].itemSet == itemSet )                    // Does the item below in the set
                {
                    _itemsBySet[index] = items[i];                     // Add item to array
                    index++;
                }
            }
            return _itemsBySet;
        }
    }

    /// @dev Retrieve list Items by set
    /// @param itemSet Item Set e.g., a grouping of items for selection
    function getItemsBySetAndType(uint256 itemSet, uint256 itemType)
        external
        view
        returns (Item[] memory itemsBySetAndType)                      // Define the array of items to be returned.        
    {
        uint256 total = items.length;                                  // Store the total items in a local variable
        uint256 totalWithItemSetAndType = 0;
        if ( total == 0 ) {                                            // If no items found
            return itemsBySetAndType;                                  // Return an empty array
        } else {
            for(uint256 i = 0; i < total; i++){                        // Loop through the items to determine the count
                if ( items[i].itemSet == itemSet &&                    // Does the item belong in the set
                     items[i].itemType == itemType)                    // Is the item a specific type
                {
                    totalWithItemSetAndType++;                         // Increment total
                }
            }
            Item[] memory _itemsBySetAndType = new Item[](totalWithItemSetAndType);
            uint256 index = 0;
            for(uint256 i = 0; i < total; i++){                       // Loop through the items to populate the array
                if ( items[i].itemSet == itemSet &&                    // Does the item belong in the set
                     items[i].itemType == itemType)                    // Is the item a specific type
                {
                    _itemsBySetAndType[index] = items[i];             // Add item to array
                    index++;
                }
            }
            return _itemsBySetAndType;
        }
    }

    /// @dev Retrieve list of Items based on rarity & type
    /// @param itemSet Item grouping
    /// @param itemType Item Type e.g., Raw Material etc.
    /// @param itemRarity Item Rarity e.g., common = 0, uncommon=1 etc.
    function getItemSetByTypeAndRarity(uint256 itemSet, uint256 itemType, uint256 itemRarity)
        external
        view
        returns (Item[] memory itemsByRarityAndType)                        // Define the array of items to be returned.        
    {
        uint256 total = items.length;                                       // Store the total items in a local variable
        uint256 totalWithItemRarity = 0;
