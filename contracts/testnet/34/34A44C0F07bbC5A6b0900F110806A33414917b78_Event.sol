        address _patron, 
        uint256 _expiry,
        bool _transferable
    ) external override returns (uint256 _nftId) {
        require(_msgSender() == address(this), "UNAUTHORIZED");
        _nftId = Collectible._mint(_patron, _expiry, _transferable);
    }

