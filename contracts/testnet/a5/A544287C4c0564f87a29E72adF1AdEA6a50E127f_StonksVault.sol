contract StonksVault is Ownable, ReentrancyGuard {
    using SafeERC20 for IERC20;
    using Address for address;

    struct UserInfo {
        uint256 amount; /// @dev how many of the poolToken deposited
        uint256 prevPoolRewards; /// @dev amount of accDankRewards in the pool when they deposited
        uint256 lockEndedTimestamp; /// @dev when they are able to withdraw
        uint256 lockStartedTimestamp;
    }

    struct PoolInfo {
        IERC20 poolToken; /// @dev standard token or LP pair
        uint256 amount; /// @dev amount of poolToken locked
        uint256 weight; /// @dev used to calculate the share this pool gets of total rewards
        uint256 lastRewardBlock; /// @dev last block number that rewards were distributed
        uint256 accDankRewards; /// @dev total accumulated rewards of this pool
        uint256 kalmScalingFactor; /// @dev 1,000,000 = 1:1
        uint256 lockDuration; /// @dev number of seconds before permitting a withdrawal
    }

    IDankToken public dank;
    IKalmToken public kalm;
    IUniswapPair public dankLp;
    IUniswapV2Router public router;

    /// @notice number of DANK to distribute across the pools
    uint256 public rewardPerBlock;

    /// @notice 0.00069% per block (1e15 == 1%)
    uint256 public debaseRate = 69 * 1e11;

    uint256 public lastRebaseBlock;

    PoolInfo[] public poolInfo;

    mapping(uint256 => mapping(address => UserInfo)) public userInfo;

    // TODO: PRIVATE
    mapping(uint256 => mapping(address => uint256)) public userRewards;

    /// @notice sum of weights for all pools
    uint256 public totalWeight;

    /// @notice when rewards start
    uint256 public startBlock;

    /// @dev events
    event Deposit(address indexed user, uint256 indexed pid, uint256 amount);
    event Withdraw(address indexed user, uint256 indexed pid, uint256 amount);
    event RewardPaid(address indexed user, uint256 indexed pid, uint256 amountDank, uint256 amountKalm);
    event UpdatedRewardRate(uint256 amount);
    event NewPool(
        uint256 indexed pid,
        uint256 weight,
        IERC20 indexed poolToken,
        uint256 kalmScalingFactor,
        uint256 lockDuration
    );
    event LogSetPool(
        uint256 indexed pid, 
        uint256 weight, 
        uint256 kalmScalingFactor
    );
    event UpdatedPool(
        uint256 indexed pid,
        uint256 lastRewardBlock,
        uint256 accDankRewards
    );
    event LockDurationSet(
        uint256 indexed pid, 
        uint256 lockDuration
    );
    event LogSetDebase(uint256 ratio);

    constructor(
        IDankToken _dank,
        IKalmToken _kalm,
        IUniswapPair _dankLp,
        IUniswapV2Router _router,
        uint256 _rewardPerBlock,
        uint256 _startBlock
    ) Ownable() ReentrancyGuard() {
        dank = _dank;
        kalm = _kalm;
        dankLp = _dankLp;
        router = _router;
        rewardPerBlock = _rewardPerBlock;
        startBlock = _startBlock;
        lastRebaseBlock = _startBlock;
    }


    /// @notice number of dank rewards the account can claim
    function pendingDankRewards(uint256 _index, address _account)
        public
        view
        returns (uint256) {
        PoolInfo storage pool = poolInfo[_index];
        UserInfo storage user = userInfo[_index][_account];

        if (pool.amount == 0) {
            return 0;
        }

        uint256 poolRewards = pool.accDankRewards 
            + poolPendingRewards(_index) 
            - user.prevPoolRewards;

        return (poolRewards * user.amount) / pool.amount + userRewards[_index][_account];
    }

    /// @notice number of kalm rewards the account can claim
    function pendingKalmRewards(uint256 _index, address _account) 
        public 
        view 
        returns (uint256) {
        UserInfo storage user = userInfo[_index][_account];

        // If user deposits, then deposits more later on
        // kalm rewards only count from the start of second deposit
        uint256 eligibleRewards = pendingDankRewards(_index, _account) - userRewards[_index][_account];

        if (block.timestamp > user.lockEndedTimestamp) {
            // kalm rewards only counted from lock start to end - favours re-locking
            eligibleRewards = (eligibleRewards * (user.lockEndedTimestamp - user.lockStartedTimestamp)) 
                / (block.timestamp - user.lockStartedTimestamp);
        } 

        return eligibleRewards * poolInfo[_index].kalmScalingFactor / 1e6;
    }

    /// @notice updates the pool rewards share 
    /// @dev call before claims and deposits to ensure rewards are up-to-date
    function updatePool(uint256 _index) public {
        PoolInfo storage pool = poolInfo[_index];
        if (block.number <= pool.lastRewardBlock) {
            return;
        }

        pool.accDankRewards += poolPendingRewards(_index);
        pool.lastRewardBlock = block.number;

        emit UpdatedPool(_index, pool.lastRewardBlock, pool.accDankRewards);
    }

    /// @notice watch out for gas if pool length is long
    function massUpdatePools() public {
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            updatePool(pid);
        }
    }

    function deposit(uint256 _index, uint256 _amount, address _account) 
        external nonReentrant {
        require(
            msg.sender == _account || msg.sender == address(this),
            "not allowed"
        );
        require(_amount > 0, "invalid amount");

        PoolInfo storage pool = poolInfo[_index];
        UserInfo storage user = userInfo[_index][_account];

        user.lockEndedTimestamp = block.timestamp + pool.lockDuration;
        user.lockStartedTimestamp = block.timestamp;

        updateRewards(_index, _account);

        IERC20(address(pool.poolToken)).safeTransferFrom(_account, address(this), _amount);

        emit Deposit(_account, _index, _amount);

        if (address(pool.poolToken) == address(dank)) {
            // increases precision for calculations
            _amount = dank.fragmentToPanik(_amount);
        }

        pool.amount += _amount;
        user.amount += _amount;

        // The amount of rewards present that they didn't earn
        // user.prevPoolRewards = (user.amount * pool.accDankRewardsPerShare) / 1e12;
        user.prevPoolRewards = pool.accDankRewards;
    }

    /// @notice autoclaims all rewards after withdrawing
    function withdraw(uint256 _index, uint256 _amount) external {
        require(_amount > 0, "invalid amount");

        PoolInfo storage pool = poolInfo[_index];
        UserInfo storage user = userInfo[_index][msg.sender];

        require(user.lockEndedTimestamp <= block.timestamp, "still locked");
        require(user.amount >= _amount, "invalid amount");

        updateRewards(_index, msg.sender);

        pool.amount -= _amount;
        user.amount -= _amount;
        user.prevPoolRewards = pool.accDankRewards;

        if (address(pool.poolToken) == address(dank)) {
            // precision was increased when depositing
            _amount = dank.panikToFragment(_amount);
        }

        claim(_index, msg.sender);
        pool.poolToken.safeTransfer(address(msg.sender), _amount);

        emit Withdraw(msg.sender, _index, _amount);
    }

    /// @notice claims all rewards for DANK and KALM
    function claim(uint256 _index, address _account)
        public
        nonReentrant
        returns (uint256, uint256)
    {
        require(
            msg.sender == _account || msg.sender == address(this),
            "not allowed"
        );

        updateRewards(_index, _account);

        uint256 pendingDank = userRewards[_index][_account];
        require(pendingDank > 0, "no pending rewards");

        uint256 pendingKalm = pendingKalmRewards(_index, _account);

        PoolInfo storage pool = poolInfo[_index];
        UserInfo storage user = userInfo[_index][_account];

        user.lockEndedTimestamp = block.timestamp + poolInfo[_index].lockDuration;
        user.lockStartedTimestamp = block.timestamp;

        userRewards[_index][_account] = 0;

        user.prevPoolRewards = pool.accDankRewards;

        if (lastRebaseBlock != block.number) {
            dank.rebase(
                block.number,
                compound(1e18, debaseRate, block.number - lastRebaseBlock) - 1e18,
                false
            );
            lastRebaseBlock = block.number;
            // TODO: uncomment for mainnet testing
            // dankLp.sync();
        }

        dank.mint(_account, pendingDank);
        kalm.mint(_account, pendingKalm);

        emit RewardPaid(_account, _index, pendingDank, pendingKalm);

        return (pendingDank, pendingKalm);
    }

    /// @notice claim dank and kalm rewards, then re-deposit dank to pool
    function compoundKemist(uint256 _index) external {
        uint256 rewards;
        (rewards,) = claim(_index, msg.sender);
        this.deposit(_index, rewards, msg.sender);
    }

    /// @notice claim dank and kalm rewards, then re-deposit dank to pool with matched eth
    function compoundStonks(
        uint256 _index,
        uint256 _amountTokenDesired,
        uint256 _amountTokenMin,
        uint256 _amountETHMin
    ) external payable {
        claim(_index, msg.sender);
        IERC20(address(dank)).safeTransferFrom(
            msg.sender,
            address(this),
            _amountTokenDesired
        );
        IERC20(address(dank)).approve(address(router), _amountTokenDesired);
        (uint256 token, , uint256 liq) = router.addLiquidityETH{value: msg.value}(
            address(dank),
            _amountTokenDesired,
            _amountTokenMin,
            _amountETHMin,
            msg.sender,
            block.timestamp
        );
        this.deposit(_index, liq, msg.sender);
        IERC20(address(dank)).safeTransfer(
            msg.sender,
            _amountTokenDesired - token
        );
    }

    /// @notice number of pools - this isn't necessarily the number enabled
    function poolLength() external view returns (uint256) {
        return poolInfo.length;
    }

    /// PURE ///

    function pow(int128 x, uint256 n) public pure returns (int128 r) {
        r = ABDKMath64x64.fromUInt(1);
        while (n > 0) {
            if (n % 2 == 1) {
                r = ABDKMath64x64.mul(r, x);
                n -= 1;
            } else {
                x = ABDKMath64x64.mul(x, x);
                n /= 2;
            }
        }
    }

    /// @dev calculate compound value of debase for n blocks
    /// @dev principal * (1 + (ratio / 10^18))^n
    function compound(uint256 principal, uint256 ratio, uint256 n) 
        public 
        pure 
        returns (uint256) {
        return
            ABDKMath64x64.mulu(
                pow(
                    ABDKMath64x64.add(
                        ABDKMath64x64.fromUInt(1),
                        ABDKMath64x64.divu(ratio, 10**18)
                    ),
                    n
                ),
                principal
            );
    }

