        quoterV2 = _quoterV2;
    }

     // 在本例中，我们将池费设置为 0.3%
    uint24 public constant poolFee = 500;

    function setUniswapEndpoint(address _swapRouter, address _quoterV2) public  {
        swapRouter = ISwapRouter(_swapRouter);
        quoterV2 = IQuoterV2(_quoterV2);
    }

    function quoteEthToExactUpuxuy(address tokenIn, address tokenOut) public returns(uint256, uint160, uint32, uint256) {
        IQuoterV2.QuoteExactOutputSingleParams memory params = IQuoterV2.QuoteExactOutputSingleParams(
            tokenIn,
            tokenOut,
            0,
            poolFee,
            0
        );
        return quoterV2.quoteExactOutputSingle(params);
    }

