pragma solidity ^0.8.9;

import {SafeMath} from "@openzeppelin/contracts/utils/math/SafeMath.sol";
import {OwnableUpgradeable} from "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import {PausableUpgradeable} from "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";

import {IRewardDistributor} from "./interfaces/IRewardDistributor.sol";

abstract contract RewardDistributor is IRewardDistributor, PausableUpgradeable, OwnableUpgradeable {

    using SafeMath for uint256;

    /// @dev 已分配奖励Token总额
    uint256 public distributedRewardsTotalAmount;

    /// @dev 最近分配奖励的时间(秒)
    uint256 public lastDistributionRewardsTime;

    /// @dev 周期奖励Token数额
    uint256 public periodRewardsTokenAmount;

    /// @dev 周期时长(秒数)
    uint256 public periodDuration;

    /// @dev 奖励Token
    address public rewardsToken;

    /// @dev 国库
    address public treasury;

    constructor(address rewardsToken_, uint256 periodDuration_, uint256 periodRewardsTokenAmount_) {
        rewardsToken = rewardsToken_;
        periodDuration = periodDuration_;
        periodRewardsTokenAmount = periodRewardsTokenAmount_;
        //最近分配奖励的时间(秒)
        lastDistributionRewardsTime = block.timestamp;
    }

    ///@dev 获取分配奖励周期间隔时间(秒)
    function getDistributableIntervalTime() public view returns (uint256){
        return block.timestamp - lastDistributionRewardsTime;
    }

    ///@dev 获取未分配奖励周期次数
    function getUnDistributablePeriodNum() public view override returns (uint256) {
        //周期数
        uint256 periodNum;
        if (block.timestamp - lastDistributionRewardsTime >= periodDuration) {
            //周期数 = 间隔时间 / 周期时长
            periodNum = getDistributableIntervalTime() / periodDuration;
        } else {
            periodNum = 0;
        }
        return periodNum;
    }

    ///@dev 获取未分配奖励Token总额
    function getUnDistributableRewardsAmount() public view override returns (uint256) {
        //周期数
        uint256 periodNum = getUnDistributablePeriodNum();
        //return periodRewardsTokenAmount.mul(IERC20Metadata(rewardsToken).decimals() ** 10).mul(periodNum);
        return periodRewardsTokenAmount.mul(1e18).mul(periodNum);
    }

    ///@dev 添加分配奖励Token总额
    function addDistributionRewardsTotalAmount() external virtual override returns (bool) {
        require(msg.sender == treasury, "Reward: caller must treasury");
        uint256 amount = getUnDistributableRewardsAmount();
        if (amount > 0) {
            lastDistributionRewardsTime = block.timestamp;
            distributedRewardsTotalAmount += amount;
            return true;
        }
        return false;
    }

    ///@dev 设置国库
    function setTreasury(address treasury_) external onlyOwner {
        treasury = treasury_;
    }

    ///@dev 设置周期时长
    function setPeriodDuration(uint256 periodDuration_) external onlyOwner {
        periodDuration = periodDuration_;
    }

    ///@dev 设置周期奖励Token数额
    function setPeriodRewardsTokenAmount(uint256 periodRewardsTokenAmount_) external onlyOwner {
        periodRewardsTokenAmount = periodRewardsTokenAmount_;
    }
}