        string memory newFeedData
    ) public payable _onlyEdit {
        require(feeds[feedHash].author == msg.sender, "Feed's author required");
        bytes32 newHash = bytes(newFeedData).length > 0 ? keccak256(abi.encode(block.timestamp, newFeedData)) : bytes32(0);
        token.safeTransferFrom(msg.sender, address(this), editFee);
        emit EditFeed(feedHash, newHash);
    }

