pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract DistributionContract {
    using SafeMath for uint256;
address[] public addressList;

    IERC20 public arbot;
    uint256 public constant EPOCH_DURATION = 2 minutes;
    uint256 public lastEpochTime;
    uint256 public totalShares;
    uint256 public epochBalance;

    mapping(address => uint256) public userShares;
    mapping(address => uint256) public lastClaimTime;
    mapping(address => uint256) public claimedRewards;

    event RewardsClaimed(address indexed user, uint256 amount);

    constructor(address _arbot) {
        arbot = IERC20(_arbot);
        lastEpochTime = block.timestamp;
    }

   

    function updateEpoch() public {
        require(block.timestamp >= lastEpochTime + EPOCH_DURATION, "Epoch not finished yet");
        
        if (totalShares > 0) {
            epochBalance = arbot.balanceOf(address(this)).sub(totalUnclaimedRewards());
        }

        // Reset epoch time
        lastEpochTime = block.timestamp;
    }

    function claimRewards() public {
        require(block.timestamp >= lastClaimTime[msg.sender] + 10 minutes, "Must wait 24 hours before claiming again");

        uint256 rewards = calculateRewards(msg.sender);
        require(rewards > 0, "No pending rewards");
        
        // Transfer rewards
        arbot.transfer(msg.sender, rewards);
        
        // Update amounts
        claimedRewards[msg.sender] += rewards;
        lastClaimTime[msg.sender] = block.timestamp;

        emit RewardsClaimed(msg.sender, rewards);
    }

    function calculateRewards(address _user) public view returns (uint256) {
        if (userShares[_user] > 0) {
            return epochBalance.mul(userShares[_user]).div(totalShares);
        }
        return 0;
    }

    function totalUnclaimedRewards() public view returns (uint256) {
        uint256 totalUnclaimed = 0;
        // Add all unclaimed rewards
        // Note: This could be an expensive operation if there are a lot of users.
        for (uint i = 0; i < addressList.length; i++) {
            totalUnclaimed = totalUnclaimed.add(calculateRewards(addressList[i]));
        }
        return totalUnclaimed;
    }
}