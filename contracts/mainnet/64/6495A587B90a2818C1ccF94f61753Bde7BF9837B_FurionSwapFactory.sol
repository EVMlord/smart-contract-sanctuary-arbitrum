        address _pair,
        address _token,
        address _receiver,
        uint256 _amount
    ) external {
        require(msg.sender == furionLeverage, "FurionSwap: ONLY_LEVERAGE");
        FurionSwapPair(_pair).transferWhenLeverage(_token, _amount, _receiver);
    }
}

