        uint256 outputTotalSupply = outputToken.totalSupply();

        if (pairToken == outputToken.token0()) {
            return outputTotalSupply * pairTokenAmount / reserves2;
        } else {
            return outputTotalSupply * pairTokenAmount / reserves3;
        }
    }
    
