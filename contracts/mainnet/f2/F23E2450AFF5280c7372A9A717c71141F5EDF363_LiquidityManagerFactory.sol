        );

        _mintLiquidity(
            MintLiquidityData({
                tickLower: ranges[2], // tickLower
                tickUpper: ranges[3], // tickUpper
                amount0Desired: Math.min(_token0Balance(), inMax[2]),
                amount1Desired: Math.min(_token1Balance(), inMax[3]),
                amount0Min: inMin[2],
                amount1Min: inMin[3]
