/// @title A factory that creates FeeDistributor contracts
contract FeeDistributorFactory is AdminAccess, Pausable, SignerManager {

    /// @notice implementation of FeeDistributor to clone from
    address public immutable implementation;
    uint128 private constant MAX_ITERATIONS = 100;
    uint128 private _totalClones;
    mapping(uint256 => address) private _clones;

    error InvalidToken(address token);
    error InvalidAddress();
    error InvalidStartIndex();
    error InvalidEndIndex();
    error InvalidRange();
    error CloneIDNotFound(uint256 cloneID);

    event Created(uint128 indexed cloneID, address indexed creator, address indexed clone);

    /**
     * @param _wethAddress WETH address
     * @param signer_ Off-chain signer
     * @param admin_ Admin address
     */
    constructor(
        address _wethAddress,
        address signer_,
        address admin_
    ) SignerManager(signer_) AdminAccess(admin_) {
        if (_wethAddress == address(0)) revert InvalidToken(_wethAddress);
        implementation = address(new FeeDistributor(_wethAddress));
    }

    /**
     * @notice Create a new FeeDistributor contract
     * @param _campaign Campaign address
     * @param _tokens List of tokens to be used in the created FeeDistributor contract
     * @param _recipients List of recipients to receive token distributions
     * @return clone FeeDistributor clone address
     */
    function create(
        IEpochCampaign _campaign,
        address[] calldata _tokens,
        FeeDistributor.Recipient[] calldata _recipients
    ) external whenNotPaused returns (address payable clone) {
        if (address(_campaign) == address(0)) revert InvalidAddress();
        uint128 cloneID = _totalClones;
        clone = payable(
            Clones.cloneDeterministic(implementation, _generateSalt(cloneID, address(_campaign), msg.sender))
        );
        _clones[cloneID] = clone;
        _totalClones++;
        FeeDistributor(clone).initialize(
            _campaign,
            _tokens,
            _recipients,
            msg.sender
        );
        emit Created(cloneID, msg.sender, clone);
    }

    /**
     * @notice Predict a fee distributor clone address
     * @param _cloneID Future clone ID
     * @param _campaign Campaign address
     * @param _creator Creator address
     * @return address Predicted FeeDistributor clone address
     */
    function predict(
        uint128 _cloneID,
        address _campaign,
        address _creator
    ) external view returns (address) {
        if (_campaign == address(0) || _creator == address(0)) revert InvalidAddress();
        return Clones.predictDeterministicAddress(implementation, _generateSalt(_cloneID, _campaign, _creator));
    }

    /**
     * @notice Get the total number of clones
     * @return uint128 Total clones
     */
    function getTotalClones() external view returns (uint128) {
        return _totalClones;
    }

    /**
     * @notice Get a clone's address by clone ID
     * @param _cloneID Clone ID
     * @return address Clone address
     */
    function getCloneByID(uint256 _cloneID) external view returns (address) {
        if (_cloneID >= _totalClones) revert CloneIDNotFound(_cloneID);
        return _clones[_cloneID];
    }

    /**
     * @notice Get multiple clone addresses by a range of clone IDs
     * @param _startID Start clone ID
     * @param _endID End clone ID
     * @return list A list of clone IDs starting at _startID and ending at _endID
     */
    function getCloneByRange(uint256 _startID, uint256 _endID) external view returns (address[] memory list) {
        uint256 total = _totalClones;
        if (_startID > _endID || _startID >= total) revert InvalidStartIndex();
        if (_endID - _startID + 1 > MAX_ITERATIONS) revert InvalidRange();
        if (_endID >= total) revert InvalidEndIndex();
        list = new address[](_endID - _startID + 1);
        uint256 listIndex;
        for (uint256 i = _startID; i <= _endID; i++) {
            list[listIndex++] = _clones[i];
        }
    }

    /// @notice pauses the factory (only Admin)
    function pause() external onlyAdmin {
        _pause();
    }

    /// @notice unpauses the factory (only Admin)
    function unpause() external onlyAdmin {
        _unpause();
    }

    /**
     * @param _cloneID Future clone ID
     * @param _campaign Campaign address
     * @param _creator Campaign address
     * @return bytes32 Salt used for cloning
     */
    function _generateSalt(
        uint128 _cloneID,
        address _campaign,
        address _creator
    ) private pure returns (bytes32) {
        return keccak256(abi.encodePacked(_cloneID, _campaign, _creator));
    }
}

