     * @param feedData string in JSON format of Feed
     */
    function createFeed(
        bytes32 parentHash,
        string memory feedData,
        address payable callTarget,
        uint256 callValue,
        bytes memory callData
    ) public payable {
        _doCall(callTarget, callValue, callData);
        bytes32 feedHash = keccak256(abi.encode(block.timestamp, feedData));
        require(
            parentHash == bytes32(0) || feeds[parentHash].author != address(0),
            "Invalid parent!"
        );
        uint256 fee = (parentHash == bytes32(0)) ? rootFee : childFee;
