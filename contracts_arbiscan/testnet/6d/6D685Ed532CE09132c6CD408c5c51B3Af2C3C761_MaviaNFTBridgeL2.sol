import "@openzeppelin/contracts-upgradeable/utils/introspection/ERC165CheckerUpgradeable.sol";
import "./interfaces/IMintableNFT.sol";

abstract contract MaviaNFTBridge is OwnableUpgradeable, IERC721ReceiverUpgradeable {
  address public nft721Token;

  /**
   * @dev Upgradable initializer
   */
  function __MaviaNFTBridge_init(address _nft721Token) internal initializer {
    __Ownable_init();
    nft721Token = _nft721Token;
  }

  /**
   * @dev Update NFT721 token
   */
  function setNFT721Token(address _nft721Token) external onlyOwner {
    nft721Token = _nft721Token;
  }

  /**
   * @dev Deposit NFT to Bridge
   */
  function _deposit(uint256 _tokenId) internal {
    IERC721Upgradeable(nft721Token).safeTransferFrom(msg.sender, address(this), _tokenId);
  }

  /**
   * @dev Public withdraw NFT from Bridge, called by counterpart only
   */
  function withdraw(address _to, uint256 _tokenId) external virtual;

  /**
   * @dev Withdraw NFT from Bridge
   */
  function _withdraw(address _to, uint256 _tokenId) internal {
    // If Bridge is owner of token -> sent
    try IERC721Upgradeable(nft721Token).ownerOf(_tokenId) returns (address _nftOwner) {
      require(_nftOwner == address(this), "Wrong owner");
      IERC721Upgradeable(nft721Token).safeTransferFrom(address(this), _to, _tokenId);
    } catch Error(string memory reason) {
      require(
        keccak256(bytes(reason)) == keccak256(bytes("ERC721: owner query for nonexistent token")),
        "Invalid reason"
      );
      // Otherwise, mint from Bridge
      IMintableNFT(nft721Token).mintNFT(_to, _tokenId);
    }
  }

  /**
   * @dev Whenever an {IERC721} `tokenId` token is transferred to this contract via {IERC721-safeTransferFrom}
   * by `operator` from `from`, this function is called.
   *
   * It must return its Solidity selector to confirm the token transfer.
   * If any other value is returned or the interface is not implemented by the recipient, the transfer will be reverted.
   *
   * The selector can be obtained in Solidity with `IERC721.onERC721Received.selector`.
   */
  function onERC721Received(
    address _operator,
    address, // _owner,
    uint256, // _tokenId,
    bytes calldata
  ) external view override returns (bytes4) {
    require(_operator == address(this), "self");
    return this.onERC721Received.selector;
  }
}

