pragma abicoder v2;
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC20/SafeERC20.sol";
import "@openzeppelin/contracts/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "./interfaces/IStargateRouter.sol";
import "./interfaces/IStargateReceiver.sol";
import "./interfaces/ILayerZeroEndpoint.sol";
import "./interfaces/IUnisonUSDCVaultToken.sol";
import "./interfaces/IStrategy.sol";

contract UnisonVault1 is ERC20, Ownable, IStargateReceiver {
    using SafeERC20 for IERC20;
    using SafeMath for uint256;
    address want;
    address router;
    ILayerZeroEndpoint public endpoint;
    uint256  stgPoolId;  
    uint8 internal constant TYPE_DEPOSIT = 1;
    uint8 internal constant TYPE_WITHDRAW = 2;
    uint256 totalAssets = 0; // vault balance + strategies debt + profit/loss
    address vaultManager;
    uint16 localChainId;
    uint256 gasForDestinationLzReceive = 1000000;
    uint256 nativeFeeForStrategy = 80000000000000000;
    struct Strategy {
        uint16 stratChainId;
        address stratAddress;
    }
    //Strategy[] public strategies;
    mapping (uint => mapping (address => uint256))public strategiesDebt;
    Strategy[] strategies;

    uint[] withdrawl_queue;


    event Received(address vault, uint256 amount);
    event Mint(address source, address holder, uint256 amount);
    event Withdraw(address vault, uint256 amount);
    constructor (
        string memory _name,
        string memory _symbol,
        address _want,
        address _router,
        address _endpoint,
        uint256 _stgPoolId,
        address _vaultManager,
        uint16 _localChainId
    ) public ERC20(
        _name,
        _symbol
    ) {
        want = _want;
        router = _router;
        endpoint = ILayerZeroEndpoint(_endpoint);
        stgPoolId = _stgPoolId;
        vaultManager = _vaultManager;
        localChainId = localChainId;
    }


  
    function vaultBalance() public view returns (uint256){
       return IERC20(want).balanceOf(address(this));
    }
    
    function sharePrice(uint256 _shares) public view returns(uint256){
        return (totalAssets.mul(_shares)).div(totalSupply());
    }
    function swapFee(
       uint16 destChainId,
       address destAddress
    )  public view returns (uint256, uint256){

        return  IStargateRouter(router).quoteLayerZeroFee(destChainId, 1, abi.encodePacked(destAddress), bytes(""), IStargateRouter.lzTxObj(0, 0, "0x") );  
    }

    function approveTokenSpender(
        address spender,
        uint256 amount
    ) public  returns (bool){
       return IERC20(want).approve(spender, amount);
    }

    function amountAvailableToWithdraw() public returns(uint256){
        (uint256 amount,   ) = maxDebtStrategy();
        return vaultBalance() + amount;
    }
    function addStrategy(uint16 chainId, address strategy) external onlyOwner {
        strategies.push(Strategy(chainId, strategy));
    } 


    function resetStrategy(uint chainId, address strategy) external onlyOwner{
        strategiesDebt[chainId][strategy] = 0;
        
    }

    function getStrategyDebt(uint chainId, address strategy) public view returns (uint256) {
        return strategiesDebt[chainId][strategy];
    }

    function maxDebtStrategy() private returns(uint256, uint){

        uint256 maxAmount = 0;
        uint stratIndex =0;
        for(uint i=0; i < strategies.length; i++){
                
            uint chainid = strategies[i].stratChainId;
            address strategy = strategies[i].stratAddress;
            uint256 stratAmount = strategiesDebt[chainid][strategy];
              
            if (stratAmount>maxAmount){
                maxAmount = stratAmount;
                stratIndex = i;
            }
              
        }
        return (maxAmount, stratIndex);
    }
    function deposit(uint256 _amount) public {
        require(IERC20(want).transferFrom(msg.sender, address(this), _amount), 'transferFrom failed.');         
        mintShares(_amount, msg.sender, address(this));
    }
    
    function mintShares(uint256 _amount, address _userAddress, address _fromAddr) private {
        uint256 shares = 0;
        if (totalSupply() == 0) {
                shares = _amount.mul(1e12);
            } else {
                shares = (_amount.mul(totalSupply())).div(totalAssets);
            }
            _mint(_userAddress, shares);
            totalAssets+= _amount;
            emit Mint(_fromAddr, _userAddress, shares);
    }

    function sgReceive(
        uint16 _chainId, 
        bytes memory _srcAddress, 
        uint _nonce, 
        address _token, 
        uint amountLD, 
        bytes memory _payload
    ) override external {
        require(
            msg.sender == address(router), 
            "only stargate router can call sgReceive!"
        );
      
        (uint8 functionType, address _fromAddr, address _userAddress, uint256 shares) = abi.decode(_payload, (uint8, address, address, uint256));
       
        if (functionType == TYPE_DEPOSIT){
            mintShares(amountLD, _userAddress, _fromAddr);
        }
        else if (functionType == TYPE_WITHDRAW){
            strategiesDebt[_chainId][_fromAddr] -= amountLD;
            _withdraw(_userAddress, shares, true);
            emit Withdraw(_fromAddr, amountLD);
        }
        else{
            emit Received(_fromAddr, amountLD);
        }

    } 
    
    function transferToStrategy(
        uint16 destChainId,
        uint256 destPoolId,
        uint256 amount,
        uint256 amountOutMin,
        address destAddress
    )  external payable {
       // (uint256 estimateFee,  ) = swapFee(destChainId, destAddress);
        require( msg.sender == address(vaultManager), "only vault manager can call" );
        approveTokenSpender(address(router), amount);
        require(vaultBalance() > amount, "Not enough vault balance");/*TO_DO also add fee balance to amount*/ 
        strategiesDebt[destChainId][destAddress] += amount;
        IStargateRouter(router).swap{value: msg.value}(destChainId, stgPoolId, destPoolId, msg.sender, amount, amountOutMin, IStargateRouter.lzTxObj(0, 0, "0x"), abi.encodePacked(destAddress),bytes("") );

    }

    function lzEstimateFees(
        uint16 _dstChainId,
        address _destination,
        uint256 _shares

    ) external view returns (uint256 nativeFee, uint256 zroFee) {
        uint256 amount = sharePrice(_shares);
        bytes memory payload = abi.encode(msg.sender, address(this),amount, _shares);
        uint16 version = 2;
        bytes memory adapterParams = abi.encodePacked(version, gasForDestinationLzReceive, nativeFeeForStrategy, _destination);
        return endpoint.estimateFees( _dstChainId, _destination, payload, false, adapterParams );
    }

    function notifyStrategy( 
        uint16 _dstChainId,
        address _destination,
        uint256 amount,
        bytes memory payload, 
        bytes memory adapterParams
        ) internal {

        require( msg.sender == address(vaultManager), "only vault manager can call" );

        endpoint.send{value: msg.value}(
            _dstChainId,
            abi.encodePacked(_destination),
            payload,
            payable(address(this)),
            address(0x0),
            adapterParams
        );
    }

    function _withdraw(
        address userAddress, 
        uint256 _shares,
        bool  bridge
    ) internal {
        uint256 amount = sharePrice(_shares);
        uint256 wamount = amount;
        if(bridge){
             wamount = amount.sub(amount.mul(6).div(10000)); //deducting stargate protocol fee 6bps 
        }
        _burn(userAddress, _shares);
        totalAssets-= amount;
        IERC20(want).safeTransfer(userAddress, wamount);
    }
  
    function _withdrawLocal(address _strategy, uint256 _amount) internal{
        IStrategy(_strategy).withdraw(_amount);
        strategiesDebt[localChainId][_strategy] -= _amount;

    }

    function withdraw(
        uint256 _shares
    ) external payable {
        require( balanceOf(msg.sender)>= _shares, "Not enough tokens to withdraw" );
        uint256 wamount = sharePrice(_shares);

        if (vaultBalance() >= wamount){
            _withdraw(msg.sender, _shares, false);

        } else {
            (uint256 amount, uint index) = maxDebtStrategy();
            require( amount.add(vaultBalance()) >= wamount, "Check max available amount to withdraw at once" );  
            uint256 withdrawAmount =  wamount.sub(vaultBalance());     

            if(strategies[index].stratChainId == localChainId){
                _withdrawLocal(strategies[index].stratAddress, withdrawAmount); 
                _withdraw(msg.sender, _shares, false);
            } else{
                bytes memory payload = abi.encode(msg.sender, address(this), withdrawAmount, _shares);
                uint16 version = 2;
                bytes memory adapterParams = abi.encodePacked(version, gasForDestinationLzReceive, nativeFeeForStrategy, strategies[index].stratAddress);
                notifyStrategy(strategies[index].stratChainId, strategies[index].stratAddress, withdrawAmount, payload, adapterParams);

            }      
        }
    }

  

    receive() external payable {}
   
}

