        address operator,
        bytes32 oldPermissions,
        bytes32 newPermissions
    );

    function initialize(address owner) external;

    function setOperatorPermissions(
        address operator,
        bytes32 merkleRootPermissions,
        uint256 maxValue,
        uint256 maxFee
    ) external;
}

