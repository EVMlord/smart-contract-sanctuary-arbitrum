    /* /////////////////////////////////////////////////////////////////////////////
    Error
    ///////////////////////////////////////////////////////////////////////////// */

    error IncorrectValue();

    /* /////////////////////////////////////////////////////////////////////////////
    IMAGE_DATAS
    ///////////////////////////////////////////////////////////////////////////// */

    function setImageDatas(bytes memory data, uint256 imageId, uint256 categoryId, uint256 transformId)
        public
        onlyOwner
    {
        address pointer = SSTORE2.write(data);

        assembly {
            categoryId := and(categoryId, _MASK_UINT8)
            transformId := and(transformId, _MASK_UINT16)

            let imageData := or(or(shl(96, pointer), shl(88, categoryId)), shl(72, transformId))

            // write to storage
            mstore(0x16, _DATAS_SEED)
            mstore(0x00, imageId)
            // mstore(0x20, imageDatas.slot)
            // sstore(keccak256(0x00, 0x40), imageData)
            sstore(keccak256(0x00, 0x24), imageData)
        }
    }

    function updateImageDatas(address pointer, uint256 imageId, uint256 categoryId, uint256 transformId)
        public
        onlyOwner
    {
        assembly {
            categoryId := and(categoryId, _MASK_UINT8)
            transformId := and(transformId, _MASK_UINT16)

            let imageData := or(or(shl(96, pointer), shl(88, categoryId)), shl(72, transformId))

            // write to storage
            mstore(0x16, _DATAS_SEED)
            mstore(0x00, imageId)
            // mstore(0x20, imageDatas.slot)
            // sstore(keccak256(0x00, 0x40), imageData)
            sstore(keccak256(0x00, 0x24), imageData)
        }
    }

    function getImageDatas(uint256 imageId)
        public
        view
        returns (address pointer, uint256 categoryId, uint256 transformId)
    {
        assembly {
            // read to storage
            mstore(0x16, _DATAS_SEED)
            mstore(0x00, imageId)
            // mstore(0x20, imageDatas.slot)
            // let value := sload(keccak256(0x00, 0x40))
            let value := sload(keccak256(0x00, 0x24))

            pointer := shr(96, value)
            categoryId := and(_MASK_UINT8, shr(88, value))
            transformId := and(_MASK_UINT16, shr(72, value))
        }
    }

    /* /////////////////////////////////////////////////////////////////////////////
    CHARACTER_DATAS [slot = 3] / PARTS_DATAS [slot = 2]
    ///////////////////////////////////////////////////////////////////////////// */

    // setしていいパーツか確認してない
    function setCharacterDatas(uint256[] memory imageIds, uint256 characterId, uint256 slot) public onlyOwner {
        assembly {
            let packed := mload(imageIds)

            // 15 < imageIds.length --> not allow
            if lt(15, packed) {
                mstore(0x00, 0xd2ade556) // `IncorrectValue()`.
                revert(0x1c, 0x04)
            }

            for {
                // loop setting
                let cc := 0
                let ptr := add(imageIds, 0x20)
                let last := packed
            } lt(cc, last) {
                cc := add(cc, 1)
                ptr := add(ptr, 0x20)
            } {
                // packed = imageId / imageId / imageId / ... / imageIds.length
                packed := or(packed, shl(mul(add(cc, 1), 16), and(mload(ptr), _MASK_UINT16)))
            }

            // write to storage
            mstore(mul(0x04, slot), _DATAS_SEED)
            mstore(0x00, characterId)
            // mstore(0x20, characterDatas.slot)
            // sstore(keccak256(0x00, 0x40), packed)
            sstore(keccak256(0x00, 0x24), packed)
        }
    }

    function getCharacterDatas(uint256 characterId, uint256 index, uint256 slot)
        public
        view
        returns (uint256 imageId)
    {
        assembly {
            // read to storage
            mstore(mul(0x04, slot), _DATAS_SEED)
            mstore(0x00, characterId)
            // mstore(0x20, characterDatas.slot)
            // let value := sload(keccak256(0x00, 0x40))
            let value := sload(keccak256(0x00, 0x24))

            imageId := and(_MASK_UINT16, shr(mul(index, 16), value))
        }
    }

    function getAllCharacterDatas(uint256 characterId, uint256 slot) public view returns (uint256 characterData) {
        assembly {
            // read to storage
            mstore(mul(0x04, slot), _DATAS_SEED)
            mstore(0x00, characterId)
            // mstore(0x20, characterDatas.slot)
            // characterData := sload(keccak256(0x00, 0x40))
            characterData := sload(keccak256(0x00, 0x24))
        }
    }

    /* /////////////////////////////////////////////////////////////////////////////
    CHARACTER_Render
    ///////////////////////////////////////////////////////////////////////////// */

    function characterRender(uint256 characterId, uint256 slot) public view returns (string memory) {
        string memory symbol = createBg(characterId);
        string memory useContent = '<use href="#0" x="0" y="0"/>';

        uint256 len = getCharacterDatas(characterId, 0, slot);
        for (uint256 i = 1; i < len + 1;) {
            unchecked {
                uint256 imageId = getCharacterDatas(characterId, i, slot);

                (address pointer_, uint256 categoryId_, uint256 transformId_) = getImageDatas(imageId);

                symbol = string.concat(
                    symbol, createPrefixGrope(categoryId_), string(getDataFromPointer(pointer_)), suffixGrope
                );

                useContent = string(abi.encodePacked(useContent, createUseContent(categoryId_, transformId_)));
                i++;
            }
        }

        string memory packedSVG = string.concat(prefix, symbol, useContent, suffix);
        return packedSVG;
    }

    /* /////////////////////////////////////////////////////////////////////////////
    Render_helper
    ///////////////////////////////////////////////////////////////////////////// */

    function createPrefixGrope(uint256 categoryId) public pure returns (string memory) {
        return string.concat('<symbol id="', categoryId.toString(), '">');
    }

    function createUseContent(uint256 categoryId, uint256 transformId) public view returns (string memory) {
        return string.concat(
            '<use href="#', categoryId.toString(), '" x="0" y="0" transform="', getTransformDatas(transformId), '" />'
        );
    }

    function createBg(uint256 characterId) public view returns (string memory) {
        return string.concat(
            '<symbol id="0"><rect width="1000" height="1000" fill="',
            bgColorAssets[characterId % bgColorAssets.length],
            '"/></symbol>'
        );
    }

    function getDataFromPointer(address pointer) public view returns (bytes memory data) {
        return SSTORE2.read(pointer);
    }

    function setTransformDatas(uint256 index, bytes memory data) public onlyOwner {
        transformDatas[index] = string(data);
        // assembly {
