/**
 * @title  MushrohmBooster contract
 * @author Archethect
 * @notice This contract contains all functionalities for boosting happiness of Smols using Mushromhm's Spore Power.
 */
contract MushrohmBooster is ReentrancyGuard, AccessControl, IMushrohmBooster {
    bytes32 public constant ADMIN_ROLE = keccak256("ADMIN");
    bytes32 public constant OPERATOR_ROLE = keccak256("OPERATOR");

    uint256 public boostAmount;
    uint256 public sporePower;

    ISmolMarriage public immutable smolMarriage;
    ISmolHappiness public immutable smolHappiness;
    IPixelMushrohmERC721 public immutable mushrohms;

    event HappinessBoosted(
        ICreatureOwnerResolverRegistry.Creature creature1,
        ICreatureOwnerResolverRegistry.Creature creature2,
        uint256 boost
    );

    constructor(
        address operator_,
        address admin_,
        address smolMarriage_,
        address smolHappiness_,
        address mushrohms_
    ) {
        require(operator_ != address(0), "MUSHROHMBOOSTER:ILLEGAL_ADDRESS");
        require(admin_ != address(0), "MUSHROHMBOOSTER:ILLEGAL_ADDRESS");
        require(smolMarriage_ != address(0), "MUSHROHMBOOSTER:ILLEGAL_ADDRESS");
        require(smolHappiness_ != address(0), "MUSHROHMBOOSTER:ILLEGAL_ADDRESS");
        require(mushrohms_ != address(0), "MUSHROHMBOOSTER:ILLEGAL_ADDRESS");
        smolMarriage = ISmolMarriage(smolMarriage_);
        smolHappiness = ISmolHappiness(smolHappiness_);
        mushrohms = IPixelMushrohmERC721(mushrohms_);
        _setupRole(ADMIN_ROLE, admin_);
        _setupRole(OPERATOR_ROLE, admin_);
        _setupRole(OPERATOR_ROLE, operator_);
        _setRoleAdmin(OPERATOR_ROLE, ADMIN_ROLE);
        _setRoleAdmin(ADMIN_ROLE, ADMIN_ROLE);
    }

    modifier onlyAdmin() {
        require(hasRole(ADMIN_ROLE, msg.sender), "MUSHROHMBOOSTER:ACCESS_DENIED");
        _;
    }

    modifier onlyOperator() {
        require(hasRole(OPERATOR_ROLE, msg.sender), "MUSHROHMBOOSTER:ACCESS_DENIED");
        _;
    }

    function boostHappiness(ICreatureOwnerResolverRegistry.Creature memory creature, uint256 mushrohmId)
        public
        nonReentrant
    {
        require(boostAmount > 0, "MUSHROHMBOOSTER:BOOST_AMOUNT_NOT_SET");
        require(sporePower > 0, "MUSHROHMBOOSTER:REQUIRED_SPOREPOWER_NOT_SET");
        require(isOwner(msg.sender, creature), "MUSHROHMBOOSTER:NOT_OWNER_OF_CREATURE");
        require(mushrohms.ownerOf(mushrohmId) == msg.sender, "MUSHROHMBOOSTER:NOT_OWNER_OF_MUSHROHM");
        require(mushrohms.getSporePower(mushrohmId) >= sporePower, "MUSHROHMBOOSTER:NOT_ENOUGH_SPOREPOWER");
        require(smolMarriage.isMarried(creature), "MUSHROHMBOOSTER:CREATURE_NOT_MARRIED");
        ICreatureOwnerResolverRegistry.Creature memory partner = areCreaturesEqual(
            smolMarriage.getMarriage(creature).creature1,
            creature
        )
            ? smolMarriage.getMarriage(creature).creature2
            : smolMarriage.getMarriage(creature).creature1;
        smolHappiness.increaseHappiness(creature, boostAmount);
        smolHappiness.increaseHappiness(partner, boostAmount);
        mushrohms.redeemSporePower(mushrohmId, sporePower);
        emit HappinessBoosted(creature, partner, boostAmount);
    }

    function setBoostAmount(uint256 boostAmount_) public onlyOperator {
        boostAmount = boostAmount_;
    }

    function setSporePower(uint256 sporePower_) public onlyOperator {
        sporePower = sporePower_;
    }

    function isOwner(address account, ICreatureOwnerResolverRegistry.Creature memory creature)
        internal
        view
        returns (bool)
    {
        if (ICreatureOwnerResolver(creature.ownerResolver).isOwner(account, creature.tokenId)) {
            return true;
        }
        return false;
    }

    function areCreaturesEqual(
        ICreatureOwnerResolverRegistry.Creature memory creature1,
        ICreatureOwnerResolverRegistry.Creature memory creature2
    ) internal pure returns (bool) {
        if (creature1.ownerResolver == creature2.ownerResolver && creature1.tokenId == creature2.tokenId) {
            return true;
        }
        return false;
    }
}

