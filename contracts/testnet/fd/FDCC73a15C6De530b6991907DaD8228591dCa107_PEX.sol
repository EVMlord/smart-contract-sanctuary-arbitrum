pragma solidity 0.8.17;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "../interfaces/IStorageT.sol";

contract PEX is ERC20 {

    IStorageT public storageT;

    modifier onlyGov(){
        require(msg.sender == storageT.gov(), "GOV_ONLY");
        _;
    }

    constructor(
        string memory _name,
        string memory _symbol,
        address _storageT,

        address _private_sale,
        address _treasury,
        address _rewards_reserve,
        address _advisor,
        address _launch_pad,
        address _team,
        address _floor_price_fund,
        address _liquidity
    ) ERC20(_name, _symbol) {
        require(
            _storageT != address(0) &&

            _private_sale != address(0) &&
            _treasury != address(0) &&
            _rewards_reserve != address(0) &&
            _advisor != address(0) &&
            _launch_pad != address(0) &&
            _team != address(0) &&
            _floor_price_fund != address(0) &&
            _liquidity != address(0)
        );

        storageT = IStorageT(_storageT);

        uint Decimals = 10 ** decimals();
        _mint(_private_sale, 10150000 * Decimals);
        _mint(_treasury, 8600000 * Decimals);
        _mint(_rewards_reserve, 8600000 * Decimals);
        _mint(_advisor, 1500000 * Decimals);
        _mint(_launch_pad, 3500000 * Decimals);
        _mint(_team, 7400000 * Decimals);
        _mint(_floor_price_fund, 1250000 * Decimals);
        _mint(_liquidity, 9000000 * Decimals);
    }

    function mint(address account, uint256 amount) public onlyGov {
        require(account != address(0), "account err");
        require(amount > 0, "amount err");
        _mint(account, amount);
    }

    function burn(address account, uint256 amount) public onlyGov {
        require(account != address(0), "account err");
        require(amount > 0, "amount err");
        _burn(account, amount);
    }

}