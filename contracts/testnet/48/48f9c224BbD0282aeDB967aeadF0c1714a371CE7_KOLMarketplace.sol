/// @title An abstract contract that managers support for tokens
abstract contract TokenSupport {

    struct Token {
        address token;
        uint96 index;
    }

    error InvalidTokenListLength();
    error MaxTokenLimitReached();
    error InvalidStartIndex();
    error InvalidEndIndex();
    error InvalidRange();
    error NothingToRemove();
    error TokenIsZeroAddress(uint128 index);
    error TokenDuplicate(address token);
    error UnsupportedToken(address token);

    uint128 private constant MAX_ITERATIONS = 100;
    uint128 private constant MAX_UINT128 = type(uint128).max;
    address[] internal _supportedTokenList;
    mapping(address => Token) private _supportedTokens;

    event AddedSupportedTokens(address[] tokens);
    event RemovedSupportedTokens(address[] tokens);

    /**
     * @notice Add supported tokens
     * @param _tokens A list of tokens to add support for
     */
    function addSupportedTokens(address[] calldata _tokens) external virtual;

    /**
     * @notice Remove supported tokens
     * @param _tokens A list of tokens to remove support for
     */
    function removeSupportedTokens(address[] calldata _tokens) external virtual;

    /**
     * @notice Get the total number of supported tokens
     * @return uint128 Total supported tokens
     */
    function getTotalSupportedTokens() external view returns (uint128) {
        return _getTotalSupportedTokens();
    }

    /**
     * @notice Get a list of supported tokens by a range of indexes
     * @param _startIndex Start index
     * @param _endIndex End index
     * @return list A list of supported tokens from the start to the end index (inclusive)
     */
    function getSupportedTokens(uint128 _startIndex, uint128 _endIndex) external view returns (address[] memory list) {
        uint128 total = _getTotalSupportedTokens();
        if (_startIndex > _endIndex || _startIndex >= total) revert InvalidStartIndex();
        if (_endIndex - _startIndex + 1 > MAX_ITERATIONS) revert InvalidRange();
        if (_endIndex >= total) revert InvalidEndIndex();
        list = new address[](_endIndex - _startIndex + 1);
        uint128 listIndex;
        for (uint128 i = _startIndex; i <= _endIndex;) {
            list[listIndex++] = _supportedTokenList[i];
            unchecked {
                i++;
            }
        }
        return list;
    }

    /**
     * @notice Check if a token is supported
     * @param _token Token address
     * @return bool true - is a supported token, false - is not a supported token
     */
    function isSupportedToken(address _token) external view returns (bool) {
        if (_token == address(0)) revert UnsupportedToken(_token);
        return _isSupportedToken(_token);
    }

    /**
     * @param _tokens A list of tokens to add support for
     */
    function _addSupportedTokens(address[] calldata _tokens) internal {
        uint256 length = _tokens.length;
        _validateTokenListLength(length);
        uint128 total = _getTotalSupportedTokens();
        if (total + length > _maxSupportedTokens()) revert MaxTokenLimitReached();
        for (uint128 i; i < length;) {
            if (_tokens[i] == address(0)) revert TokenIsZeroAddress(i);
            Token memory token = _supportedTokens[_tokens[i]];
            if (token.token != address(0)) revert TokenDuplicate(_tokens[i]);
            _supportedTokens[_tokens[i]] = Token(_tokens[i], uint96(total + i));
            _supportedTokenList.push(_tokens[i]);
            unchecked {
                i++;
            }
        }
        emit AddedSupportedTokens(_tokens);
    }

    /**
     * @param _tokens A list of tokens to remove support for
     */
    function _removeSupportedTokens(address[] calldata _tokens) internal {
        uint256 length = _tokens.length;
        _validateTokenListLength(length);
        uint128 lastIndex = _getTotalSupportedTokens();
        if (lastIndex == 0) revert NothingToRemove();
        for (uint128 i; i < length;) {
            Token memory token = _supportedTokens[_tokens[i]];
            if (token.token == address(0)) revert UnsupportedToken(_tokens[i]);
            /// @dev update current index to be last item
            uint96 index = token.index;
            unchecked {
                lastIndex--;
            }
            delete _supportedTokens[_tokens[i]];
            address lastToken = _supportedTokenList[lastIndex];
            _supportedTokens[lastToken].index = index;
            _supportedTokenList[index] = lastToken;
            _supportedTokenList.pop();
            unchecked {
                i++;
            }
        }
        emit RemovedSupportedTokens(_tokens);
    }

    /**
     * @param _token Token address
     * @return bool true - is a supported token, false - is not a supported token
     */
    function _isSupportedToken(address _token) internal view returns (bool) {
        return _supportedTokens[_token].token != address(0);
    }

    /**
     * @return uint128 Total number of supported tokens
     */
    function _getTotalSupportedTokens() internal view returns (uint128) {
        return uint128(_supportedTokenList.length);
    }

    /// @param _length Length of an array
    function _validateTokenListLength(uint256 _length) private pure {
        if (_length == 0 || _length > MAX_ITERATIONS) revert InvalidTokenListLength();
    }

    /**
     * @return uint128 Maximum number of supported tokens
     */
    function _maxSupportedTokens() internal pure virtual returns (uint128) {
        return MAX_UINT128;
    }

}