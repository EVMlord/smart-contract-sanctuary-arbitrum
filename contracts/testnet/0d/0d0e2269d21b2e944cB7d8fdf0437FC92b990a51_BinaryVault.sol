    function withdrawToken(address _token) external virtual onlyOwner {
        require(
            _token != address(underlyingToken),
            "INVALID_TOKEN"
        );

        IERC20Upgradeable(_token).safeTransfer(msg.sender, IERC20Upgradeable(_token).balanceOf(address(this)));
