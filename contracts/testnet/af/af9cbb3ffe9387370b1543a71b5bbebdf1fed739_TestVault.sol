pragma solidity ^0.8.0;
import "openzeppelin-contracts/contracts/token/ERC20/IERC20.sol";
import "./ITestToken.sol";
import "chainlink/contracts/src/v0.8/interfaces/AggregatorV2V3Interface.sol";
import "openzeppelin-contracts/contracts/access/Ownable.sol";

contract TestVault {
    IERC20 public ETHToken;
    ITestToken public USDToken;
    AggregatorV2V3Interface public ETHOracle;

    uint collateralRatio = 2;
    mapping(address => uint) public userDebt;

    constructor() {
        ETHToken = IERC20(0x77948261F844c194d3495fDf56dfCCd304d30C56);
        USDToken = ITestToken(0xAd7C15D903ba942281dCF7B245624B6b167B9C56);
        ETHOracle = AggregatorV2V3Interface(0x5f0423B1a6935dc5596e7A24d98532b67A0AeFd8);
    }

    function setUSDToken(address _USDTokenAddress) external {
        USDToken = ITestToken(_USDTokenAddress);
    }

    function setCollateralRatio(uint _ratio) external {
        require(_ratio > 1, "Ratio too low");
        collateralRatio = _ratio;
    }

    function getTotalSupply() public view returns (uint) {
        return USDToken.totalSupply();
    }

    function getETHPrice() public view returns (uint) {
        return uint(ETHOracle.latestAnswer());
    }

    function getETHPriceDecimals() public view returns (uint) {
        return uint(ETHOracle.decimals());
    }

    function getCurrentDebt(address _account) public view returns (uint) {
        return userDebt[_account];
    }

    function registerDebt(address _account, uint _amount) internal {
        userDebt[_account] = _amount + getCurrentDebt(_account);
    }

    function depositAndMintMax(uint _amount) public {
        ETHToken.transferFrom(msg.sender, address(this), _amount);
        uint MaxMintable = _amount * getETHPrice() / (10 ** getETHPriceDecimals()) / collateralRatio;
        registerDebt(msg.sender, MaxMintable);
        USDToken.mint(msg.sender, MaxMintable);
    }

    function repayMaxAndRedeem() public {
        require(USDToken.balanceOf(msg.sender) >= getCurrentDebt(msg.sender));
        uint repayAmount = getCurrentDebt(msg.sender);
        USDToken.transferFrom(msg.sender, address(this), repayAmount);
        USDToken.burn(repayAmount);
    }
    


}

