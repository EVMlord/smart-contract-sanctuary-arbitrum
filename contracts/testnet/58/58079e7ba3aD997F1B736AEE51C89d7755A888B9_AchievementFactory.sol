pragma solidity ^0.8.20;

import {Initializable} from "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import {AccessControlUpgradeable} from "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import {UpgradeableBeacon} from "@openzeppelin/contracts/proxy/beacon/UpgradeableBeacon.sol";
import {BeaconProxy} from "@openzeppelin/contracts/proxy/beacon/BeaconProxy.sol";

import {IAchievementFactory} from "./IAchievementFactory.sol";
import {Achievement} from "./Achievement.sol";

contract AchievementFactory is Initializable, AccessControlUpgradeable, IAchievementFactory {
    bytes32 public constant BACKEND_ROLE = keccak256("BACKEND_ROLE");
    bytes32 public constant DEV_ROLE = keccak256("DEV_ROLE");

    mapping(uint256 => address) private _collections;
    uint256 private _collectionCounter;
    string private _baseURI;
    address private _backendAccount;
    address private _implementationBeacon;

    function initialize(string calldata baseURI_, address backendAccount_) external initializer {
        __AccessControl_init();

        _baseURI = baseURI_;
        _implementationBeacon = address(new UpgradeableBeacon(address(new Achievement()), msg.sender));

        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(BACKEND_ROLE, backendAccount_);
    }

    function createCollection(address devAccount) external onlyRole(DEV_ROLE) {
        BeaconProxy proxy = new BeaconProxy(
            _implementationBeacon,
            abi.encodeWithSelector(Achievement.initialize.selector, devAccount)
        );
        _collectionCounter++;
        _collections[_collectionCounter] = address(proxy);
        emit CollectionCreated(_collectionCounter, _collections[_collectionCounter]);
    }

    function setURI(string calldata baseURI_) external onlyRole(DEFAULT_ADMIN_ROLE) {
        _baseURI = baseURI_;
    }

    function collections(uint256 id) external view returns (address) {
        return _collections[id];
    }

    function baseURI() external view returns (string memory) {
        return _baseURI;
    }
}

