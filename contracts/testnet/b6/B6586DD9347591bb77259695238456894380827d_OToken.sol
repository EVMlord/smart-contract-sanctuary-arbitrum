// oToken
contract OToken is
  BasedOFT,
  Pausable,
  ReentrancyGuard,
  AccessControlEnumerable,
  IERC4626LayerZero
{
  using FixedPointMathLib for uint256;
  using SafeERC20 for ERC20;

  struct DepositData {
    uint256 amountIn; // The amount pledged by the user
    uint256 shares; // Estimated shares owed at the moment of sending
    uint16 chainId; // Where did we invest
    address receiver; // Receiver
    bool tokensMinted; // Is the minting closed?
  }

  struct WithdrawData {
    uint256 amount; // The amount asked by the user
    uint256 shares; // Estimated shares owed at the moment of withdrawing
    address receiver; // Receiver
    bool withdrawDone; // Is the minting closed?
  }

  // This struct is used to designate target chains for investment
  struct ChainStrategy {
    uint16 chainId; // self-explanatory
    uint256 maxDeposit; // maximum debt allowed on this chain
    uint256 destPoolId; // stargate PoolID used to exit
    // See https://stargateprotocol.gitbook.io/stargate/developers/pool-ids
  }

  /*//////////////////////////////////////////////////////////////
                                 ERRORS
  //////////////////////////////////////////////////////////////*/

  error VaultIsFull(uint256 leftToInvest, uint256 askingToInvest);

  /*//////////////////////////////////////////////////////////////
                                 EVENTS
  //////////////////////////////////////////////////////////////*/
  // This events signals the start of the deposit cycle
  event DepositInitiated(
    address indexed caller,
    address indexed owner,
    uint256 assets,
    uint256 shares,
    uint256 nonce
  );

  // This events signals the end of the deposit cycle
  event DepositDone(
    address indexed receiver,
    uint256 assets,
    uint256 shares,
    uint256 nonce
  );

  // This events signals the start of the withdraw cycle
  event WithdrawInitiated(
    address indexed caller,
    address indexed receiver,
    address indexed owner,
    uint256 assets,
    uint256 shares,
    uint256 nonce
  );

  // This events signals the end of the deposit cycle
  // The multiple amounts allow to show a split of the fees on the frontend
  // And keep easily track of them in a subgraph
  event WithdrawDone(
    address indexed receiver,
    uint256 amountReceived,
    uint256 amountWithdrawn,
    uint256 shares,
    uint256 nonce
  );

  // event Debug(uint256 amount, string msg);

  //TODO: add access control logic
  //TODO: add a custom decimals() function
  /*//////////////////////////////////////////////////////////////
                              IMMUTABLES
  //////////////////////////////////////////////////////////////*/
  address public immutable override asset;
  uint256 public immutable missingDecimals;

  /*//////////////////////////////////////////////////////////////
                                VARIABLES
  //////////////////////////////////////////////////////////////*/
  uint256 public maxDepositAmount;
  uint256 public maxMintAmount;
  IHomeRouter public router;
  uint256 nonce;

  // We need to have this data ready to cross check when receiving call
  // If a call fails for whatever reason, we can re-trigger it
  // But then, the contract on the receiving end should be able to do a check
  mapping(address => uint256[]) public userToNonceDeposit;
  mapping(uint256 => DepositData) public nonceToDepositData;
  mapping(address => uint256[]) public userToNonceWithdraw;
  mapping(uint256 => WithdrawData) public nonceToWithdrawData;

  // This allows us to do some bookeeping
  mapping(uint16 => uint256) public debtPerChain;

  // Deposits should be done to the chains on the top of the stack first
  // Withdraws should be done on the bottom ones
  ChainStrategy[] public chainInvestmentOrder;

  /*//////////////////////////////////////////////////////////////
                                CONSTRUCTOR
  //////////////////////////////////////////////////////////////*/
  constructor(
    address _asset,
    string memory _name,
    string memory _symbol,
    address _lzEndpoint
  ) BasedOFT(_name, _symbol, _lzEndpoint, 0) {
    asset = _asset;
    missingDecimals = 18 - ERC20(_asset).decimals();
    maxDepositAmount = type(uint256).max;
    maxMintAmount = type(uint256).max;
  }

  /*//////////////////////////////////////////////////////////////
                                MODIFIERS
  //////////////////////////////////////////////////////////////*/
  modifier onlyRouter() {
    require(msg.sender == address(router), "token: not authorized");
    _;
  }

  /*//////////////////////////////////////////////////////////////
                        DEPOSIT/WITHDRAWAL LOGIC
    //////////////////////////////////////////////////////////////*/
  // TODO: write a deposit function using the worst case scenario in terms of gas in order to be
  // ERC4626 compliant (almost!)
  function deposit(
    uint256 _amount,
    address _receiver,
    uint256 _callGasCost, // gas used for the call on remote chain default 400_000 in wei (basic execution cost)
    uint256 _dustAmount // dust sent that will be used to fund the callback back to home chain
  ) external payable whenNotPaused nonReentrant returns (uint256 shares) {
    // We check the _amount of shares owed to the user before the callback
    require((shares = previewDeposit(_amount)) != 0, "token: ZERO_SHARES");
    sendAssets(_amount, shares, _receiver, _callGasCost, _dustAmount);
  }

  function mint(
    uint256 _shares,
    address _receiver,
    uint256 _callGasCost,
    uint256 _dustAmount
  ) external payable whenNotPaused nonReentrant returns (uint256 assets) {
    uint256 amount = previewMint(_shares); // No need to check for rounding error, previewMint rounds up.
    sendAssets(amount, _shares, _receiver, _callGasCost, _dustAmount);
  }

  function sendAssets(
    uint256 _amount,
    uint256 _shares,
    address _receiver,
    uint256 _callGasCost,
    uint256 _dustAmount
  ) internal {
    require(_amount <= maxDeposit(_receiver), "token: max deposit reached");

    uint16 chainId;
    uint256 destPoolId;

    // We get the assets
    ERC20(asset).safeTransferFrom(msg.sender, address(router), _amount);

    // We register the deposit
    nonce = nonce + 1;
    userToNonceDeposit[msg.sender].push(nonce);
    (chainId, destPoolId) = chooseChainDeposit(_amount);
    nonceToDepositData[nonce] = DepositData(
      _amount,
      _shares,
      chainId,
      _receiver,
      false
    );

    // If the deposit chain is the local chain, we call a special function
    // TODO: manage chainId lz format
    if (chainId == block.chainid) {
      emit DepositInitiated(msg.sender, _receiver, _amount, _shares, nonce);
      router.processHomeDeposit(nonce, _amount);

      // Else, the deposit chain is different than the current
    } else {
      router.processExternalDeposit{value: msg.value}(
        nonce,
        _amount,
        chainId,
        destPoolId,
        IHomeRouter.GasData(_callGasCost, _dustAmount)
      );
      emit DepositInitiated(msg.sender, _receiver, _amount, _shares, nonce);
    }
  }

  function depositCallback(uint256 _nonce, uint256 _amountDeposited)
    external
    onlyRouter
  {
    // We load the deposit data (saves gas)
    DepositData memory data = nonceToDepositData[_nonce];
    // Who did deposit?
    require(data.receiver != address(0), "token: wrong nonce provided");
    require(
      data.tokensMinted != true,
      "token: those tokens have already been minted"
    );

    // We apply the hairdcut linked to eventual deposit fees
    uint256 mintAmount;
    if (_amountDeposited != data.amountIn) {
      mintAmount = (data.shares * _amountDeposited) / data.amountIn;
    } else {
      mintAmount = data.shares;
    }

    // We register register the mint as having been done
    nonceToDepositData[_nonce].tokensMinted = true;
    debtPerChain[data.chainId] += _amountDeposited;
    _mint(data.receiver, mintAmount);

    emit DepositDone(data.receiver, _amountDeposited, data.shares, nonce);
  }

  function withdraw(
    uint256 _amount,
    address _receiver,
    address _owner,
    uint256 _callGasCost,
    uint256 _dustAmount
  ) external payable nonReentrant returns (uint256 shares) {
    // This represents the amount of crTokens that we're about to burn
    shares = previewWithdraw(_amount); // No need to check for rounding error, previewWithdraw rounds up.
    recoverAssets(
      _amount,
      shares,
      _receiver,
      _owner,
      _callGasCost,
      _dustAmount
    );
  }

  function redeem(
    uint256 _shares,
    address _receiver,
    address _owner,
    uint256 _callGasCost,
    uint256 _dustAmount
  ) external payable returns (uint256 assets) {
    // Check for rounding error since we round down in previewRedeem.
    require((assets = previewRedeem(_shares)) != 0, "ZERO_ASSETS");
    recoverAssets(
      assets,
      _shares,
      _receiver,
      _owner,
      _callGasCost,
      _dustAmount
    );
  }

  function recoverAssets(
    uint256 _amount,
    uint256 _shares,
    address _receiver,
    address _owner,
    uint256 _callGasCost,
    uint256 _dustAmount
  ) internal {
    // We decrease the allowance if the msg.sender isn't the receiver
    if (msg.sender != _owner) {
      uint256 allowed = allowance(_owner, msg.sender); // Saves gas for limited approvals.

      if (allowed != type(uint256).max) decreaseAllowance(msg.sender, _shares);
    }

    uint16 chainId;
    (chainId, ) = chooseChainWithdraw(_amount);
    // We burn the tokens
    _burn(_owner, _shares);
    // We register the withdraw action
    nonce = nonce + 1;
    userToNonceWithdraw[msg.sender].push(nonce);
    nonceToWithdrawData[nonce] = WithdrawData(
      _amount,
      _shares,
      _receiver,
      false
    );

    // We update the debt data
    // To prevent the transaction from reverting in case of an overflow, we use a min()
    debtPerChain[chainId] -= Math.min(_amount, debtPerChain[chainId]);

    require(
      router.processWithdrawAssets{value: msg.value}(
        chainId,
        nonce,
        _amount,
        _callGasCost,
        _dustAmount
      ),
      "token: withdraw failed"
    );

    emit WithdrawInitiated(
      msg.sender,
      _receiver,
      _owner,
      _amount,
      _shares,
      nonce
    );
  }

  function withdrawCallback(
    uint256 _nonce, // withdraw nonce
    uint256 _amountWithdrawn, // amount withdrawn from strategy (before bridge)
    uint256 _amountReceived // amount received from bridge // onlyRouter
  ) external {
    // emit Debug(_nonce, "withdrawCallback");
    // We load the withdraw data (saves gas)
    WithdrawData memory data = nonceToWithdrawData[_nonce];
    // Solidity assigns 0 value by default to inexistant storages
    require(data.receiver != address(0), "token: wrong nonce provided");
    require(
      data.withdrawDone == false,
      "token: assets have already been redeemed"
    );

    data.withdrawDone = true;
    ERC20(asset).safeTransferFrom(
      address(router),
      data.receiver,
      _amountReceived
    );

    emit WithdrawDone(
      data.receiver,
      _amountWithdrawn,
      _amountReceived,
      data.shares,
      _nonce
    );
  }

  /*//////////////////////////////////////////////////////////////
                        ACCOUNTING LOGIC
    //////////////////////////////////////////////////////////////*/

  // Used for compounds
  function updateChainDebt(uint16 _chainId, uint256 _newDebt)
    external
    onlyRouter
  {
    debtPerChain[_chainId] = _newDebt;
  }

  function totalAssets() public view override returns (uint256) {
    uint256 totalDebt;
    for (uint256 i; i < chainInvestmentOrder.length; i++) {
      totalDebt = totalDebt + debtPerChain[chainInvestmentOrder[i].chainId];
    }
    return (totalDebt);
  }

  // Useful for the front end
  function sharePrice() external view returns (uint256) {
    if (missingDecimals > 0)
      return (totalAssets() * 1e18 * (missingDecimals**10)) / totalSupply();
    else return (totalAssets() * 1e18) / totalSupply();
  }

  function convertToShares(uint256 assets)
    public
    view
    override
    returns (uint256)
  {
    uint256 supply = totalSupply(); // Saves an extra SLOAD if totalSupply is non-zero.
    // shares = assets * supply / totalDebt
    return supply == 0 ? assets : assets.mulDivDown(supply, totalAssets());
  }

  function convertToAssets(uint256 shares)
    public
    view
    override
    returns (uint256)
  {
    uint256 supply = totalSupply(); // Saves an extra SLOAD if totalSupply is non-zero.
    // assets = shares *
    return supply == 0 ? shares : shares.mulDivDown(totalAssets(), supply);
  }

  function previewDeposit(uint256 assets)
    public
    view
    override
    returns (uint256)
  {
    return convertToShares(assets);
  }

  function previewMint(uint256 shares) public view override returns (uint256) {
    uint256 supply = totalSupply(); // Saves an extra SLOAD if totalSupply is non-zero.

    return supply == 0 ? shares : shares.mulDivUp(totalAssets(), supply);
  }

  function previewWithdraw(uint256 assets)
    public
    view
    override
    returns (uint256)
  {
    uint256 supply = totalSupply(); // Saves an extra SLOAD if totalSupply is non-zero.

    return supply == 0 ? assets : assets.mulDivUp(supply, totalAssets());
  }

  function previewRedeem(uint256 shares)
    public
    view
    override
    returns (uint256)
  {
    return convertToAssets(shares);
  }

  // For the frontend
  function getChainInvest(uint16 _index)
    external
    view
    returns (
      uint16 chainId,
      uint256 maxDeposit,
      uint256 destPoolId
    )
  {
    return (
      chainInvestmentOrder[_index].chainId,
      chainInvestmentOrder[_index].maxDeposit,
      chainInvestmentOrder[_index].destPoolId
    );
  }

  // For the frontend
  function getChainAmount() external view returns (uint256) {
    return chainInvestmentOrder.length;
  }

  /*//////////////////////////////////////////////////////////////
                     DEPOSIT/WITHDRAWAL LIMIT LOGIC
    //////////////////////////////////////////////////////////////*/
  function maxDeposit(address) public view override returns (uint256) {
    return maxDepositAmount;
  }

  function maxMint(address) public view override returns (uint256) {
    return maxMintAmount;
  }

  function maxWithdraw(address owner) public view override returns (uint256) {
    return convertToAssets(balanceOf(owner));
  }

  function maxRedeem(address owner) public view override returns (uint256) {
    return balanceOf(owner);
  }

  // We choose where to invest in
  function chooseChainDeposit(uint256 _amount)
    public
    view
    returns (uint16 chainId, uint256 destPoolId)
  {
    for (uint256 i = 0; i < chainInvestmentOrder.length; i++) {
      ChainStrategy memory chainStrategy = chainInvestmentOrder[i];
      if (_amountLeftToInvestInChain(chainStrategy) >= _amount) {
        return (chainStrategy.chainId, chainStrategy.destPoolId);
      }
    }

    // If we reach here, no chain was found
    revert VaultIsFull({
      leftToInvest: totalAmountLeftToInvest(),
      askingToInvest: _amount
    });
  }

  function chooseChainWithdraw(uint256 _amount)
    public
    view
    returns (uint16 chainId, uint256 destPoolId)
  {
    // We loop backward
    for (uint256 i = chainInvestmentOrder.length; i > 0; i--) {
      ChainStrategy memory chainStrategy = chainInvestmentOrder[i - 1];
      if (debtPerChain[chainStrategy.chainId] >= _amount) {
        return (chainStrategy.chainId, chainStrategy.destPoolId);
      }
    }
    // If we reach here, no chain with enough capital was found
    require(
      false,
      "oToken: not enough asset on single chain - try a lower amount"
    );
  }

  // This is the low-level version for the internal calls that need to be gas-efficient
  function _amountLeftToInvestInChain(ChainStrategy memory _chainStrategy)
    internal
    view
    returns (uint256 amountLeftToInvest)
  {
    // Saves an SLOAD if the result is != 0
    uint256 debt = debtPerChain[_chainStrategy.chainId];
    if (_chainStrategy.maxDeposit < debt) {
      amountLeftToInvest = 0;
    } else {
      amountLeftToInvest = _chainStrategy.maxDeposit - debt;
    }
  }

  // This is the version for the external calls
  function amountLeftToInvestInChain(uint16 _chainId)
    external
    view
    returns (uint256 amountLeftToInvest)
  {
    ChainStrategy memory chainStrategy;

    for (uint256 i = 0; i < chainInvestmentOrder.length; i++) {
      if (chainInvestmentOrder[i].chainId == _chainId) {
        chainStrategy = chainInvestmentOrder[i];
        break;
      }
    }
    // Saves an SLOAD if the result is != 0
    uint256 debt = debtPerChain[chainStrategy.chainId];
    if (chainStrategy.maxDeposit < debt) {
      amountLeftToInvest = 0;
    } else {
      amountLeftToInvest = chainStrategy.maxDeposit - debt;
    }
  }

  function totalAmountLeftToInvest()
    public
    view
    returns (uint256 amountLeftToInvest)
  {
    for (uint256 i = 0; i < chainInvestmentOrder.length; i++) {
      amountLeftToInvest =
        amountLeftToInvest +
        _amountLeftToInvestInChain(chainInvestmentOrder[i]);
    }
  }

  /*//////////////////////////////////////////////////////////////
                              SETTERS
    //////////////////////////////////////////////////////////////*/
  function setRouter(address _routerAddress) external onlyOwner {
    router = IHomeRouter(_routerAddress);
    ERC20(asset).approve(_routerAddress, type(uint256).max);
    // TODO: add event
  }

  // Will add a chain at the end of the stack
  // TODO: Update the router?
  function addChain(
    uint16 _chainId,
    uint256 _maxDeposit,
    uint256 _destPoolId
  ) external onlyOwner {
    chainInvestmentOrder.push(
      ChainStrategy(_chainId, _maxDeposit, _destPoolId)
    );
  }

  // Remember: lower index is better
  function setChainInvestmentOrder(
    uint256 _chainId,
    uint256 _currentIndex,
    uint256 _newIndex
  ) external onlyOwner {
    // Specifying  current position allows us to economise a few SLOADs (check it off-chain first)
    // See https://eips.ethereum.org/EIPS/eip-2929
    ChainStrategy memory chainStrategy = chainInvestmentOrder[_currentIndex];
    // This is to prevent admin from selecting the wrong chain
    require(
      chainStrategy.chainId == _chainId,
      "oToken: chainId doesn't match current index"
    );
    require(
      _newIndex < chainInvestmentOrder.length,
      "oToken: new index out of range"
    );

    if (_currentIndex > _newIndex) {
      for (uint256 i = _currentIndex; i > _newIndex; i--) {
        chainInvestmentOrder[i] = chainInvestmentOrder[i - 1];
      }
    } else if (_currentIndex < _newIndex) {
      for (uint256 i = _currentIndex; i < _newIndex; i++) {
        chainInvestmentOrder[i] = chainInvestmentOrder[i + 1];
      }
    }
    chainInvestmentOrder[_newIndex] = chainStrategy;
    // TODO: add event
  }
}

