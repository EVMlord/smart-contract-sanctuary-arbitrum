    address public signer = 0x21dfea78442657c9c61802b879B5B2d4A2783f66;

    uint256 public nonce;

    mapping(uint256 => bool) public nonceUsed;

    event Burnt(address depositor, uint256[] tokenIds, uint256 nonce_);
    event Minted(address withdrawer, uint256[] tokenIds);

    constructor(ISmolBirb _smolBirbAddress) {
        smolBirb = _smolBirbAddress;

        // Approving so that NFT can burnt when user wants to migrate to L1
        ISmolBirb(smolBirb).setApprovalForAll(address(smolBirb), true);
    }

