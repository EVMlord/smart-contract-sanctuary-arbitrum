pragma solidity 0.8.11;

import "@openzeppelin/contracts/token/ERC20/extensions/ERC20Burnable.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "./IAntimatter.sol";

//Antimatter is an utility token, with 0 economic value, used only in Goat Gang game.
//it is fully decentralized, with only the rewards contract beeing able to mint it
//maxSupply is capped at 21 million
contract Antimatter is IAntimatter, Context, ERC20, ERC20Burnable {
	mapping(address => bool) controllers;

	event CAction(uint256 nftID, uint256 value, uint256 actionID, string payload);

	constructor() ERC20("Antimatter", "ANT") {
		setController(0x0000000000000000000000000000000000000000, true);
	}

	//usage of antimatter outside the blockchain
	function cAction(
		uint256 nftID,
		uint256 id,
		string memory what
	) external payable {
		emit CAction(nftID, msg.value, id, what);
	}

	function mint(address to, uint256 amount) external {
		require(totalSupply() < 21000000 ether, "over 21mil");
		require(controllers[msg.sender], "only controllers can mint");
		_mint(to, amount);
	}

	function burn(address from, uint256 amount) external {
		require(controllers[msg.sender], "only controllers can burn");
		_burn(from, amount);
	}

	function setController(address controller, bool isAllowed) internal {
		controllers[controller] = isAllowed;
	}

	function transferFrom(
		address sender,
		address recipient,
		uint256 amount
	) public virtual override(ERC20, IAntimatter) returns (bool) {
		// allow the transfer without approval. This saves gas and a transaction.
		// The sender address will still need to actually have the amount being attempted to send.
		if (controllers[_msgSender()]) {
			// NOTE: This will omit any events from being written. This saves additional gas,
			// and the event emission is not a requirement by the EIP
			// (read this function summary / ERC20 summary for more details)
			_transfer(sender, recipient, amount);
			return true;
		}
		// else allowance needed
		return super.transferFrom(sender, recipient, amount);
	}
}

