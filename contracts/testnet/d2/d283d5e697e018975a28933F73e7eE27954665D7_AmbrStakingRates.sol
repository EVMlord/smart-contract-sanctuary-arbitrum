pragma solidity ^0.8.9;

import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "./ABDKMath64x64.sol";

// Contract for HOO Ambrosia Staking Rewards calculations
// This contract is used to set the interest rate and track the reward rate for $AMBR staking

contract AmbrStakingRates is AccessControl, ReentrancyGuard {
    int128 public tokenDecScale64x64 = ABDKMath64x64.fromUInt(1e6); // 6 decimals, shared between usdC and AMBR token;
    int128 public bpScale64x64 = ABDKMath64x64.fromUInt(10000); // 10000 basis points = 100%
    int128 public interestRate64x64; // user input in basis points, but divided by 10000 and stored as 64x64: 400 basis points = 4%
    int128 public lastRewardRate64x64; // user input/output in basis points
    int128 public rewardScale64x64;
    // rates are in basis points: 100% = 10000, 1% = 100, 0.1% = 10, 0.01% = 1
    uint public lastBlockTimestamp; // timestamp of last getRewardRate64x64() call (in unix time)

    // EVENTS:
    event SetInterestRateBp(uint newInterestRateBp, uint RewardRate);
    event SetRewardScale(uint newRewardScale);
    event CompoundInterest(
        uint baseRewardRate,
        uint latestRewardRate,
        uint latestBlockTimestamp
    );

    constructor(
        uint _interestRateBp,
        uint _rewardScale,
        address[] memory _admins
    ) {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        for (uint256 i = 0; i < _admins.length; i++) {
            _setupRole(DEFAULT_ADMIN_ROLE, _admins[i]);
        }
        //set initial interest rate
        require(_interestRateBp <= 2000, "Ambr: interest rate >= 20%");
        interestRate64x64 = ABDKMath64x64.div(
            ABDKMath64x64.fromUInt(_interestRateBp),
            bpScale64x64
        );
        // set initial reward scale
        require(_rewardScale > 0, "Ambr: reward scale <= 0");
        // todo: decide on a max possible reward scale
        //require(_rewardScale <= 1000000000, "Ambr: reward scale >= 1000000%")
        rewardScale64x64 = ABDKMath64x64.fromUInt(_rewardScale);

        // set initial reward rate: 1.00
        lastRewardRate64x64 = ABDKMath64x64.fromUInt(1);
        lastBlockTimestamp = block.timestamp;
    }

    modifier onlyOwner() {
        require(
            hasRole(DEFAULT_ADMIN_ROLE, msg.sender),
            "Caller is not owner/admin"
        );
        _;
    }

    // USER INTERFACE:
    // perform calculation using 64x64 fixed point math
    // calculate reward, will move to StakingRates contract later
    // 1. update reward rate with getRewardRate()
    // 2. calculate reward: (latestRewardRate - prevRewardRate) * stakedBalance * rewardScale
    function calculateReward(
        uint prevRewardRate,
        uint stakedBalance
    ) external view returns (uint) {
        // if amount is 0, return 0
        if (stakedBalance <= 0) {
            return 0;
        }
        // convert to 64x64 fixed point
        // need to scale prevRewardRate by bpScale64x64
        int128 prevRewardRate64x64 = ABDKMath64x64.div(
            ABDKMath64x64.fromUInt(prevRewardRate),
            bpScale64x64
        );
        // scale stakedBalance by 1e6 to match tokenDecScale64x64
        int128 stakedBalance64x64 = ABDKMath64x64.div(
            ABDKMath64x64.fromUInt(stakedBalance),
            tokenDecScale64x64
        );
        int128 latestRewardRate64x64 = getRewardRate64x64();
        // calculate reward
        int128 reward64x64 = ABDKMath64x64.mul(
            ABDKMath64x64.sub(latestRewardRate64x64, prevRewardRate64x64),
            stakedBalance64x64
        );
        // scale using rewardscale, and convert back to uint
        // Would converting to uint, then scaling help to prevent overflow?
        // TODO: Check that scaling is correct
        return
            ABDKMath64x64.toUInt(
                ABDKMath64x64.mul(reward64x64, rewardScale64x64)
            );
    }

    // INTERNAL FUNCTIONS:

    // calculate reward rate
    function getRewardRate64x64() public view returns (int128) {
        // update Reward rate with current apr
        // 1. get time since last update
        // 2. calculate new reward rate: newRR = baseRR + (apr * timeSinceLastUpdate) / 31557600

        uint elapstedTime = block.timestamp - lastBlockTimestamp;
        // if no time has passed, return last reward rate
        if (elapstedTime <= 0) {
            return lastRewardRate64x64;
        }

        int128 newRewardRate64x64 = ABDKMath64x64.add(
            ABDKMath64x64.divu(
                ABDKMath64x64.mulu(interestRate64x64, elapstedTime),
                31557600
            ),
            lastRewardRate64x64
        );
        return newRewardRate64x64;
    }

    // PUBLIC VIEW FUNCTIONS:

    // returns the current Reward rate
    //  Warining: loses precision to  1e6, scaled for human readability
    function getRewardRateBp() public view returns (uint) {
        int128 latestRewardRate64x64 = getRewardRate64x64();
        return
            ABDKMath64x64.toUInt(
                ABDKMath64x64.mul(latestRewardRate64x64, bpScale64x64)
            );
    }

    // get current interest rate
    function getInterestRateBp() public view returns (uint) {
        return
            ABDKMath64x64.toUInt(
                ABDKMath64x64.mul(interestRate64x64, bpScale64x64)
            );
    }

    // get current reward scale
    function getRewardScale() public view returns (uint) {
        return ABDKMath64x64.toUInt(rewardScale64x64);
    }

    // ADMIN FUNCTIONS:

    // set interest rate
    function setInterestRateBp(uint interestRateBp_) external onlyOwner {
        require(interestRateBp_ <= 2000, "Ambr: interest rate >= 20%");
        //finish calculating Reward rate based on previous interest rate
        lastRewardRate64x64 = getRewardRate64x64();
        lastBlockTimestamp = block.timestamp;
        // set new interest rate
        interestRate64x64 = ABDKMath64x64.div(
            ABDKMath64x64.fromUInt(interestRateBp_),
            bpScale64x64
        );
        emit SetInterestRateBp(interestRateBp_, getRewardRateBp());
    }

    // set reward scale
    function setRewardScale(uint rewardScale_) external onlyOwner {
        require(rewardScale_ > 0, "Ambr: reward scale cannot be 0");
        // todo: decide on a max possible reward scale
        //require(_rewardScale <= 1000000000, "Ambr: reward scale >= 1000000%")
        rewardScale64x64 = ABDKMath64x64.fromUInt(rewardScale_);
        emit SetRewardScale(rewardScale_);
    }
}