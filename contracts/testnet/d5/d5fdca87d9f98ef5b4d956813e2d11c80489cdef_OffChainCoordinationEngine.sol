pragma solidity ^0.8.17;

import {Ownable} from "solady/auth/Ownable.sol";
import {MerkleProofLib} from "solady/utils/MerkleProofLib.sol";
import {LibBitmap} from "solady/utils/LibBitmap.sol";
import {SafeTransferLib} from "solady/utils/SafeTransferLib.sol";

contract OffChainCoordinationEngine is Ownable {

    using LibBitmap for LibBitmap.Bitmap;

    //  ~~~~~~~~~~~~~~(=^-ω-^=)~~~~~~~~~~~~~~~
    //           :::::: ERRORS ::::::
    //  ~~~~~~~~~~~~~~(=^-ω-^=)~~~~~~~~~~~~~~~

    error InvalidMerkleProof();
    error AlreadyClaimed();

    //  ~~~~~~~~~~~~~~(=^-ω-^=)~~~~~~~~~~~~~~~
    //           :::::: EVENTS ::::::
    //  ~~~~~~~~~~~~~~(=^-ω-^=)~~~~~~~~~~~~~~~
    event Claimed(address indexed user, uint256 reward, uint256 epoch);

    //  ~~~~~~~~~~~~~~(=^-ω-^=)~~~~~~~~~~~~~~~
    //          :::::: STORAGE ::::::
    //  ~~~~~~~~~~~~~~(=^-ω-^=)~~~~~~~~~~~~~~~
    
    bytes32 public merkleRoot;
    mapping (uint256 => LibBitmap.Bitmap) internal claims;

    //  ~~~~~~~~~~~~~~(=^-ω-^=)~~~~~~~~~~~~~~~
    //        :::::: CONSTRUCTOR ::::::
    //  ~~~~~~~~~~~~~~(=^-ω-^=)~~~~~~~~~~~~~~~

    constructor() {
        _initializeOwner(msg.sender);
    }

    //  ~~~~~~~~~~~~~~(=^-ω-^=)~~~~~~~~~~~~~~~
    //           :::::: ADMIN ::::::
    //  ~~~~~~~~~~~~~~(=^-ω-^=)~~~~~~~~~~~~~~~

    function setMerkleRoot(bytes32 _merkleRoot) external payable onlyOwner {
        merkleRoot = _merkleRoot;
    }

    function empty(address payable _to) external onlyOwner {
        SafeTransferLib.safeTransferETH(_to, address(this).balance);
    }

    //  ~~~~~~~~~~~~~~(=^-ω-^=)~~~~~~~~~~~~~~~
    //         :::::: FUNCTIONS ::::::
    //  ~~~~~~~~~~~~~~(=^-ω-^=)~~~~~~~~~~~~~~~

    function claim(
        uint256 index,
        address user,
        uint256 epoch,
        uint256 reward,
        bytes32[] calldata _proof) external {
        bytes32 leaf = keccak256(abi.encodePacked(index, user, reward, epoch));
        if (!MerkleProofLib.verifyCalldata(_proof, merkleRoot, leaf)) revert InvalidMerkleProof();

        if (claims[epoch].get(index)) revert AlreadyClaimed();
        claims[epoch].set(index);

        SafeTransferLib.safeTransferETH(user, reward);
        emit Claimed(user, reward, epoch);
    }

    //  ~~~~~~~~~~~~~~(=^-ω-^=)~~~~~~~~~~~~~~~
    //         :::::: FALLBACK ::::::
    //  ~~~~~~~~~~~~~~(=^-ω-^=)~~~~~~~~~~~~~~~

    receive() external payable {}
}