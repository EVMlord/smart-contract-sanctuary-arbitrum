import "../utils/Permissioned.sol";
import "../items/interfaces/IItemSets.sol";
import "../items/interfaces/IItems.sol";

struct Allowlist {address account; uint256 amount; bool claimed;}
struct Pack { 
    string name;                                    // The name of the pack
    uint256[5] rarityPercentage;                    // The percentage chance of getting items [common % ,uncommon %, rare %, epic %, legendary %]
    uint256 itemSet;                                // The item set the pack can pull from
    uint256 price;                                  // Price of the pack, disregarded if payment address is empty
    address paymentAddress;                         // Zero address is a free mint
    bytes32 packMerkleRoot;                         // Stores the packs Merkle root, if empty airdrop not available
    mapping(uint256 => uint256) packClaimedBitMap;  // Stores the air drop claims
    uint256 maxSupply;                              // Max supply of packs
    uint256 totalSupply;                            // Current supply of packs
    bool active;                                    // Status (Active/Inactive)
    Allowlist[] allowlist;                          // Onchain allowlist & claims
    }

/// @dev Farmland - PackTypes Smart Contract
contract PackTypes is ReentrancyGuard, Pausable, Permissioned {
    using SafeERC20 for IERC20;

// CONSTRUCTOR

    constructor (
          address itemSetsAddress,
          address itemsContractAddress
        ) Permissioned()
        {
            require(itemSetsAddress != address(0),      "Invalid Items Contract address");
            require(itemsContractAddress != address(0), "Invalid Items Contract address");
            itemSetsContract = IItemSets(itemSetsAddress);
            itemsContract = IItems(itemsContractAddress);
        }

// STATE VARIABLES

    /// @dev The Farmland Items contract
    IItemSets internal immutable itemSetsContract;

    /// @dev The Farmland Items contract
    IItems internal immutable itemsContract;

    /// @dev Create a mapping to track each type of pack
    mapping(uint256 => Pack) public packs;

    /// @dev Tracks the last Pack ID
    uint256 public lastPackID;
  
    /// @dev Initialise the nonce used to pseudo random numbers
    uint256 private randomNonce;

// MODIFIERS

    /// @dev Check if items registered
    modifier onlyWhenPackEnabled(uint256 packID) {
        require (packs[packID].active, "Pack inactive");
        _; // Call the actual code
    }

// EVENTS

    event AccountAllowlisted(address sender, address indexed account, uint256 packID, uint256 amount);

// ADMIN FUNCTIONS

    /// @dev Create a pack & set the rarity percentage for each item
    /// @param name the pack
    /// @param itemSet set the item types available for pack rewards
    /// @param price set the price for the pack
    /// @param paymentAddress set the contract for pack payment
    /// @param packMerkleRoot set the merkle root if a pack is an offchain airdrop
    /// @param maxSupply set the maxSupply
    /// @param active set the status of the pack
    /// @param rarityPercentages an array of the rarity percentage for item distribution eg [400, 150, 50, 10, 0]
    function createPack(string calldata name, uint256 itemSet, uint256 price, address paymentAddress, bytes32 packMerkleRoot, uint256 maxSupply, bool active, uint256[5] calldata rarityPercentages)
        external
        onlyOwner
    {
        require(rarityPercentages.length == 5,                        "Requires 5 rarity values");
        Pack storage pack = packs[lastPackID];                        // Shortcut accessor for the pack
        pack.name = name;                                             // Set the name
        pack.itemSet = itemSet;                                       // Set the item type
        pack.price = price;                                           // Set the price
        pack.paymentAddress = paymentAddress;                         // Set the payment contract
        pack.packMerkleRoot = packMerkleRoot;                         // Set the merkle root
        pack.maxSupply = maxSupply;                                   // Set a maxSupply, zero is infinte
        pack.active = active;                                         // Set pack as active/inactive
        pack.rarityPercentage = rarityPercentages;                    // update the item rarity array
        lastPackID++;                                                 // Increment the pack number
    }

    /// @dev Create a pack & set the rarity percentage for each item
    /// @param packID the packs ID
    /// @param name the pack
    /// @param itemSet set the item types available for pack rewards
    /// @param price set the price for the pack
    /// @param paymentAddress set the contract for pack payment
    /// @param packMerkleRoot set the merkle root if a pack is an offchain airdrop
    /// @param maxSupply set the maxSupply
    /// @param active set the status of the pack
    /// @param rarityPercentages an array of the rarity percentage for item distribution eg [400, 150, 50, 10, 0]
    function updatePack(uint256 packID, string calldata name, uint256 itemSet, uint256 price, address paymentAddress, bytes32 packMerkleRoot, uint256 maxSupply, bool active, uint256[5] calldata rarityPercentages)
        public
        onlyOwner
    {
        require(rarityPercentages.length == 5,                        "Requires 5 rarity values");
        Pack storage pack = packs[packID];                            // Shortcut accessor for the pack
        pack.name = name;                                             // update the name
        pack.itemSet = itemSet;                                       // update the item type
        pack.price = price;                                           // update the price
        pack.paymentAddress = paymentAddress;                         // update the payment contract
        pack.packMerkleRoot = packMerkleRoot;                         // update the merkle root
        pack.maxSupply = maxSupply;                                   // update a maxSupply, zero is infinte
        pack.active = active;                                         // update pack status (active/inactive)
        pack.rarityPercentage = rarityPercentages;                    // update the item rarity array
    }

    /// @dev Adds a list of addresses to the allowlist
    /// @param packIDs which Pack are the accounts being allowlisted for
    /// @param accounts to add to the allowlist
    /// @param amounts to add to the allowlist
    function addToAllowlist(uint256[] memory packIDs, address[] memory accounts, uint256[] memory amounts)
        external
        onlyAllowed
    {
        require (accounts.length == amounts.length && accounts.length == packIDs.length, "Mismatching totals");
        uint256 total = accounts.length;
        for (uint i = 0; i < total ; i++) {
            packs[packIDs[i]].allowlist.push(Allowlist(accounts[i], amounts[i], false)); // Add to the allowlist
            emit AccountAllowlisted(_msgSender(), accounts[i], packIDs[i], amounts[i]);  // Write an event
        }
    }

    /// @dev Start or pause the contract
    /// @param value to start or stop the contract
    function isPaused(bool value)
        public
        onlyOwner
    {
        if ( !value ) {
            _unpause();
        } else {
            _pause();
        }
    }

    /// @dev Allows the owner to withdraw all the payments from the contract
    function withdrawAll() 
        external 
        onlyOwner 
    {
        uint256 total = lastPackID;                                        // Store total number of packs into a local variable to save gas
        uint256 amount;                                                    // Instantiate local variable to store the amount to withdraw
        for (uint256 packID=0; packID < total; packID++) {                 // Loop through all packs
            IERC20 paymentContract = IERC20(packs[packID].paymentAddress); // Setup the payment contract
            if (address(paymentContract) != address(0)) {                  // If payment contract is registered
                amount = paymentContract.balanceOf(address(this));         // Retrieves the token balance
                if ( amount > 0 ) {                                        // If there's a balance
                    paymentContract.safeTransfer(_msgSender(), amount);    // Send to the owner
                }
            }
        }
    }

// INTERNAL FUNCTIONS

    /// @dev INTERNAL: Returns an arrary of Random Numbers
    /// @param n number of random numbers to generate
    function getRandomNumbers(uint256 n)
        internal
        returns (uint256[] memory expandedRandomNumbers) 
    {
        randomNonce++;
        expandedRandomNumbers = new uint256[](n);
        for (uint256 i = 0; i < n; i++) {
            expandedRandomNumbers[i] = uint256(keccak256(abi.encodePacked(block.timestamp, _msgSender(), randomNonce, i)));
        }
    }

    /// @dev Returns a packs allowlist
    function getPacksAllowList(uint256 packID)
        external
        view
        returns (Allowlist[] memory allowlist) 
    {
        allowlist = packs[packID].allowlist;
    }

    /// @dev Returns a packs rarity percentages    
    function getPacksRarityPercentages(uint256 packID)
        external
        view
        returns (uint256[5] memory rarityPercentage) 
    {
        rarityPercentage = packs[packID].rarityPercentage;
    }

    /// @dev Returns a list of all packs
    function getPacks()
        external
        view
        returns (string[] memory allPacks) 
    {
        uint256 total = lastPackID;                           // Store total number of packs into a local variable
        if ( total == 0 ) {
            return allPacks;                                  // if no packs added, return an empty array
        } else {
            for(uint256 i = 0; i < total; i++){               // Loop through the packs
                allPacks[i] = packs[i].name;                 // Add packs to array
            }
        }
    }

    /// @dev Check a allowlist address for unclaimed pack
    /// @param packID of the pack to check
    /// @param account address to check for allowlist
    function getAllowlistIndex(uint256 packID, address account)
        public
        view
        returns (
            bool unclaimed,
            uint256 index)
    {
        uint256 total = packs[packID].allowlist.length;             // Get the current allowlist array index
        if (total == 0 ) {
            return (false, 0);
        } else {
            for(uint256 i=0; i < total; i++){                           // Loop through the addresses
                if ( packs[packID].allowlist[i].account == account &&   // if account matches
                    packs[packID].allowlist[i].claimed == false )      // and unclaimed
                {
                    return (true,i);
                }
            }
        }
    }

}

