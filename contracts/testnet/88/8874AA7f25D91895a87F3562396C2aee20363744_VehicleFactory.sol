        characters[_id] = Character(
                attack,
                movement_speed,
                max_durability,
                max_capacity,
                _itemIds.current()
        );

        string memory json = string(abi.encodePacked('{"name":', nftNameVehicle, '","description":"Vehicle for meta globe game", "attributes":[{"trait_type":"Attack","value":', toString(attack),'}, {"trait_type":"Movement Speed","value":',toString(movement_speed),'}, {"trait_type":"Max Durability","value":', toString(max_durability),'}, {"trait_type":"Max Capacity","value":', toString(max_capacity),'}],'));
        json = string(abi.encodePacked(json, '"image":"',_imageUrl,'","external_url":"https://api.mglobe.net/token/', toString(_id),'"}'));
        string memory output = string(abi.encodePacked('data:application/json;base64,', json));
        
        emit OnGeneMetaData(_to, _id, attack, movement_speed, max_durability, max_capacity, output);

        return output;
    }

    /**
     * @dev upgrade meta data 
     *
     * Returns a string value whether the operation succeeded.
     *
     */
    function upgradeMetaData(
        address _to, 
        uint256 _id, 
        string memory _imageUrl
    ) 
        external 
        override 
        whenNotPaused
        onlyAuthorizationContract
        returns (string memory) 
    {
        //Note: msg.sender是erc1155合约地址，并不是调用者的钱包地址
        bytes32 hash = keccak256(abi.encodePacked(_to, address(this), _id));

        require(allowUpgrades[hash].isAllow == true, "Not Allow");

        uint256 attack = characters[_id].attack + allowUpgrades[hash].attack;
        uint256 movement_speed = characters[_id].movement_speed + allowUpgrades[hash].movement_speed;
        uint256 max_durability = characters[_id].max_durability + allowUpgrades[hash].max_durability;
        uint256 max_capacity = characters[_id].max_capacity + allowUpgrades[hash].max_capacity;

