contract GoatGang is ERC721A, Ownable, ReentrancyGuard, PullPayment {
	using Address for address;
	using Strings for uint256;
	using MerkleProof for bytes32[];

	address proxyRegistryAddress;

	//the merkle root
	bytes32 public root = 0x53f1995dc0ddf5a8ff7b345d7a2e822cad528e6d5a7afcae13e6cf7a050e03b1;

	string public _contractBaseURI = "https://api.thesharkmob.com/metadata/";
	string public _contractURI = "ipfs://QmeTiSTzxNjRg2QZ3D1yJUXjpo9oMJzQZaHMM7pvxiSABZ";

	//prices
	uint256 public tokenPrice = 0.01 ether; //normal price without affiliate link
	uint256 public tokenPriceGenesis = 0.2 ether; //genesis price
	uint256 public tokenPriceWithAffiliateLink = 0.095 ether; //5% discount with affiliate link
	uint256 public comissionPerMintAffiliate = 0.001 ether; //normal affiliate gets 10%
	uint256 public comissionPerMintGenesisAffiliate = 0.002 ether; //whitelist affiliate gets 20%

	mapping(address => uint256) public usedAddresses; //used addresses for whitelist

	bool public locked; //baseURI & contractURI lock
	uint256 public maxSupply = 5000;
	uint256 public maxSupplyGenesis = 100; //genesis

	uint256 public whitelistStartTime = block.timestamp; //change to real;
	uint256 public publicSaleStartTime = block.timestamp; //change to real;

	event CustomAction(uint256 nftID, uint256 value, uint256 actionID, string payload);

	function delete22me123() internal {}

	constructor() ERC721A("Goat Gang", "GoatG", 5) {
		_safeMint(msg.sender, 1);
	}

	/**
	 * @dev you need to be whitelisted and know the proof to be able to mint the genesis
	 */
	function genesisBuy(
		uint256 qty,
		uint256 tokenId,
		bytes32[] calldata proof
	) external payable nonReentrant {
		require(tokenPriceGenesis * qty == msg.value, "exact amount needed");
		require(usedAddresses[msg.sender] + qty < tokenId + 1, "max per wallet reached");
		require(totalSupply() + qty < maxSupplyGenesis + 1, "out of stock");
		require(block.timestamp > whitelistStartTime, "not live");
		require(isTokenValid(msg.sender, tokenId, proof), "invalid proof");

		usedAddresses[msg.sender] += qty;

		_safeMint(msg.sender, qty);
	}

	/**
	 * @dev everyone can mint freely
	 */
	function buy(uint256 qty) external payable {
		require(tokenPrice * qty == msg.value, "exact amount needed");
		require(qty < 6, "max 5 at once");
		require(totalSupply() + qty < maxSupply + 1, "out of stock");
		require(block.timestamp > publicSaleStartTime, "not live");

		_safeMint(msg.sender, qty);
	}

	/**
	 * @dev normal afiliate buy
	 */
	function buyWithReferral(uint256 qty, address refferedBy) external payable nonReentrant {
		require(tokenPriceWithAffiliateLink * qty == msg.value, "exact amount needed");
		require(qty < 6, "max 5 at once");
		require(totalSupply() + qty < maxSupply + 1, "out of stock");
		require(block.timestamp > publicSaleStartTime, "not live");

		_asyncTransfer(refferedBy, comissionPerMintAffiliate);
		_safeMint(msg.sender, qty);
	}

	/**
	 * @dev genesis afiliate buy
	 */
	function buyWithReferralGenesis(uint256 qty, uint256 tokenIDAfiliate)
		external
		payable
		nonReentrant
	{
		require(tokenIDAfiliate < maxSupplyGenesis + 1, "non genesis tokenID");
		require(tokenPriceWithAffiliateLink * qty == msg.value, "exact amount needed");
		require(qty < 6, "max 5 at once");
		require(totalSupply() + qty < maxSupply + 1, "out of stock");
		require(block.timestamp > publicSaleStartTime, "not live");

		_asyncTransfer(ownerOf(tokenIDAfiliate), comissionPerMintGenesisAffiliate);
		_safeMint(msg.sender, qty);
	}

	/**
	 * @dev paid usage of Goat Gang outside the blockchain
	 */
	function doCustomAction(
		uint256 nftID,
		uint256 id,
		string memory what
	) external payable {
		require(ownerOf(nftID) == msg.sender, "ownership required");
		emit CustomAction(nftID, msg.value, id, what);
	}

	function isTokenValid(
		address _to,
		uint256 _tokenId,
		bytes32[] memory _proof
	) public view returns (bool) {
		// construct Merkle tree leaf from the inputs supplied
		bytes32 leaf = keccak256(abi.encodePacked(_to, _tokenId));
		// verify the proof supplied, and return the verification result
		return _proof.verify(root, leaf);
	}

	function setMerkleRoot(bytes32 _root) external onlyOwner {
		root = _root;
	}

	//----------------------------------
	//----------- other code -----------
	//----------------------------------
	function tokensOfOwner(address _owner) external view returns (uint256[] memory) {
		uint256 tokenCount = balanceOf(_owner);
		if (tokenCount == 0) {
			return new uint256[](0);
		} else {
			uint256[] memory result = new uint256[](tokenCount);
			uint256 index;
			for (index = 0; index < tokenCount; index++) {
				result[index] = tokenOfOwnerByIndex(_owner, index);
			}
			return result;
		}
	}

	function exists(uint256 _tokenId) external view returns (bool) {
		return _exists(_tokenId);
	}

	function tokenURI(uint256 _tokenId) public view override returns (string memory) {
		require(_exists(_tokenId), "ERC721Metadata: URI query for nonexistent token");
		return string(abi.encodePacked(_contractBaseURI, _tokenId.toString(), ".json"));
	}

	function setBaseURI(string memory newBaseURI) external onlyOwner {
		require(!locked, "locked functions");
		_contractBaseURI = newBaseURI;
	}

	function setContractURI(string memory newuri) external onlyOwner {
		require(!locked, "locked functions");
		_contractURI = newuri;
	}

	function contractURI() public view returns (string memory) {
		return _contractURI;
	}

	function reclaimERC20(IERC20 erc20Token) external onlyOwner {
		erc20Token.transfer(msg.sender, erc20Token.balanceOf(address(this)));
	}

	function reclaimERC721(IERC721 erc721Token, uint256 id) external onlyOwner {
		erc721Token.safeTransferFrom(address(this), msg.sender, id);
	}

	function setWhitelistStartTime(uint256 newTime) external onlyOwner {
		whitelistStartTime = newTime;
	}

	function setPublicSaleStartTime(uint256 newTime) external onlyOwner {
		publicSaleStartTime = newTime;
	}

	function changePricePerToken(uint256 newPrice) external onlyOwner {
		tokenPrice = newPrice;
	}

	//can decrease the max supply if it doesn't sell
	function decreaseMaxSupply(uint256 newMaxSupply) external onlyOwner {
		maxSupply = newMaxSupply;
	}

	//can decrease the max supply if it doesn't sell
	function decreaseMaxGenesisSupply(uint256 newMaxSupply) external onlyOwner {
		maxSupplyGenesis = newMaxSupply;
	}

	// and for the eternity!
	function lockBaseURIandContractURI() external onlyOwner {
		locked = true;
	}

	// earnings withdrawal
	function withdraw(uint256 amount) public onlyOwner {
		require(amount <= address(this).balance, "too big amount");
		payable(msg.sender).transfer(amount);
	}

	/**
	 * Override isApprovedForAll to whitelist user's OpenSea proxy accounts to enable gas-less listings.
	 */
	function isApprovedForAll(address owner, address operator) public view override returns (bool) {
		// Whitelist OpenSea proxy contract for easy trading.
		ProxyRegistry proxyRegistry = ProxyRegistry(proxyRegistryAddress);
		if (address(proxyRegistry.proxies(owner)) == operator) {
			return true;
		}
		return super.isApprovedForAll(owner, operator);
	}

	//sets the opensea proxy
	function setProxyRegistry(address _newRegistry) external onlyOwner {
		proxyRegistryAddress = _newRegistry;
	}
}

