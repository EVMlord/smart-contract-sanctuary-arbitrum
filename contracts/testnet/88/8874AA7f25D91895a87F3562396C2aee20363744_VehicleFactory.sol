        json = string(abi.encodePacked(json, '"image":"',_imageUrl,'","external_url":"https://api.mglobe.net/token/', toString(_id),'"}'));
        string memory output = string(abi.encodePacked('data:application/json;base64,', json));
        
        emit OnUpgradeVehicle(_to, _id, attack, movement_speed, max_durability, max_capacity, output);

        return output;
    }

    /**
     * @dev Converts a `uint256` to its ASCII `string` decimal representation.
     */
    function toString(uint256 value) internal pure returns (string memory) {
        // Inspired by OraclizeAPI's implementation - MIT licence
        // https://github.com/oraclize/ethereum-api/blob/b42146b063c7d6ee1358846c198246239e9360e8/oraclizeAPI_0.4.25.sol

        if (value == 0) {
            return "0";
        }
        uint256 temp = value;
        uint256 digits;
        while (temp != 0) {
            digits++;
            temp /= 10;
        }
        bytes memory buffer = new bytes(digits);
        while (value != 0) {
            digits -= 1;
            buffer[digits] = bytes1(uint8(48 + uint256(value % 10)));
            value /= 10;
        }
        return string(buffer);
    }

    //操作员设置载具升级许可及升级的数值
    function setAllowUpgrades(address _to, uint _id, uint256 attack, uint256 movement_speed, uint256 max_durability, uint256 max_capacity)       
            public
            whenNotPaused
            nonReentrant
            onlyOperator
            returns (bool)
    {
        bytes32 hash = keccak256(abi.encodePacked(_to, address(this), _id));

        allowUpgrades[hash].attack = attack;
        allowUpgrades[hash].movement_speed = movement_speed;
        allowUpgrades[hash].max_durability = max_durability;
        allowUpgrades[hash].max_capacity = max_capacity;
        allowUpgrades[hash].isAllow = true;
        emit OnAllowUpgrade(_to, _id, attack, movement_speed, max_durability, max_capacity);
        return true;
    }

