        } else if (reward.tokenType == TokenType.ERC721) {
            IERC721(reward.tokenAddress).safeTransferFrom(address(this), _claimer, reward.tokenId);
        } else if (reward.tokenType == TokenType.ERC1155) {
            IERC1155(reward.tokenAddress).safeTransferFrom(
                address(this),
                _claimer,
                reward.tokenId,
                reward.tokenAmount,
                ""
            );
        }

        emit RewardClaimed(
            _claimer,
            reward.id,
            _questId,
            reward.tokenType,
            reward.tokenAmount,
            reward.tokenAddress,
            reward.tokenId
        );
    }

    function getTotalRewards() external view returns (uint256) {
        return rewardCounter;
    }

    function getRewardsByAddress(address _address) external view returns (Reward[] memory) {
        Reward[] memory userRewards = new Reward[](rewardCounter);
        uint256 count = 0;
        uint256 rewardCounter_ = rewardCounter;
        for (uint256 i = 0; i < rewardCounter_; ) {
            Reward memory rew = rewardsByAddress[_address][i];
            if (rew.id != 0) {
                userRewards[count] = rew;
                count++;
            }

            unchecked {
                ++i;
            }
        }
        return userRewards;
    }

    function getAllRewards() external view returns (Reward[] memory) {
        Reward[] memory allRewards = new Reward[](rewardCounter);
        uint256 rewardCounter_ = rewardCounter;
        for (uint256 i = 0; i < rewardCounter_; ) {
            allRewards[i] = rewardsById[i];

            unchecked {
                ++i;
            }
        }
        return allRewards;
    }

    function getRemainingClaims(uint256 _rewardId, address _claimer) external view returns (uint256) {
        uint256 questId = rewardsById[_rewardId].questId;
        return claims[_claimer][questId].remainingClaims;
    }

    function getLastClaimTime(uint256 _rewardId, address _claimer) external view returns (uint256) {
        uint256 questId = rewardsById[_rewardId].questId;
        return claims[_claimer][questId].lastClaimTime;
    }

    function isRewardAvailable(uint256 _rewardId) external view returns (bool) {
        return rewardsById[_rewardId].id != 0;
    }

    function _withdrawERC20(address _token, uint256 _amount) internal onlyOperator {
        IERC20(_token).transfer(msg.sender, _amount);
    }

    function _withdrawERC721(address _token, uint256 _tokenId) internal onlyOperator {
        IERC721(_token).safeTransferFrom(address(this), msg.sender, _tokenId);
    }

    function _withdrawERC1155(address _token, uint256 _id, uint256 _amount) internal onlyOperator {
        IERC1155(_token).safeTransferFrom(address(this), msg.sender, _amount, _id, "");
    }

    function _isSignatureValid(
        bytes calldata _signature,
        address _player,
        uint256 _questId
    ) internal pure returns (bool) {
        bytes32 hash = keccak256(abi.encodePacked(_player, _questId));
        bytes32 message = MessageHashUtils.toEthSignedMessageHash(hash);

        (address recovered, ECDSA.RecoverError error, ) = ECDSA.tryRecover(message, _signature);
        return error == ECDSA.RecoverError.NoError && recovered == _player;
    }
}