    modifier _onlyEdit() {
        require(alowEdit, "Edit is not allowed");
        _;
    }

    constructor(address token_, uint256 rootFee_, uint256 childFee_) {
        token = IERC20(token_);
        rootFee = rootFee_;
        childFee = childFee_;
    }

