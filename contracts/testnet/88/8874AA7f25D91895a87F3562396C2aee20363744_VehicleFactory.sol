    // 获取用户拥有的载具列表， 可用于游戏前端查询玩家拥有多少载具
    function getVehicleListByOwner(address owner) public view returns (uint[] memory) {
      // 为了节省gas消耗 在内存中创建结果数组方法之后完后就会销毁
      uint count = ownerCount[owner];
      uint[] memory result = new uint[](count);
      
      uint counter = 0;
      for (uint i = 1; i < _itemIds.current() + 1; i++) {
          if (itemIdOwners[i] == owner) {
              result[counter] = vehicleHolders[i];
              counter++;
          }
      }
      return result;
   }
   
